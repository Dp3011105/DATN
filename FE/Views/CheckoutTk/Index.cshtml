                <i class="bi bi-${type === 'success' ? 'check-circle-fill' : 'exclamation-circle-fill'} mr-2 text-lg"></i>
                <div class="flex-1">${message}</div>
                <button type="button" class="close-button" onclick="this.parentElement.remove()">
                    <i class="bi bi-x"></i>
                </button>
            `;
            document.body.appendChild(alert);
            setTimeout(() => {
                if (alert.parentElement) {
                    alert.remove();
                }
            }, 3000);
        }

        // Xử lý callback từ VNPAY (nếu có)
        async function handleVNPayCallback() {
            const urlParams = new URLSearchParams(window.location.search);
            const vnpayStatus = urlParams.get('vnp_TransactionStatus');
            const pendingCartItems = sessionStorage.getItem('pendingCartItems');
            const pendingCheckoutData = sessionStorage.getItem('pendingCheckoutData');

            if (vnpayStatus && pendingCartItems && pendingCheckoutData) {
                showLoading();
                if (vnpayStatus === '00') { // Giao dịch thành công
                    showAlert('Thanh toán VNPAY thành công!', 'success');
                    const cartItemIds = JSON.parse(pendingCartItems);
                    const deleteSuccess = await deleteCartItems(cartItemIds);
                    if (deleteSuccess) {
                        clearCartCookie();
                        selectedItems = [];
                        await renderCartItems();
                    }
                    sessionStorage.removeItem('pendingCartItems');
                    sessionStorage.removeItem('pendingCheckoutData');
                    setTimeout(() => {
                        window.location.href = '/QLDonHangTk';
                    }, 2000);
                } else {
                    showAlert('Thanh toán VNPAY thất bại. Vui lòng thử lại.', 'error');
                    console.error('VNPAY transaction failed:', {
                        status: vnpayStatus,
                        params: Object.fromEntries(urlParams)
                    });
                    sessionStorage.removeItem('pendingCartItems');
                    sessionStorage.removeItem('pendingCheckoutData');
                }
                hideLoading();
            }
        }

