                    <button type="button" id="submitBtn" class="submit-btn mt-6" disabled onclick="validateForm()"><i class="bi bi-check-circle mr-2"></i>Xác Nhận Thanh Toán</button>
                </form>
            </div>
        </div>
    </div>

