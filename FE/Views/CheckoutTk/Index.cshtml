                } else {
                    console.error('VNPAY response missing paymentUrl:', paymentResult);
                    throw new Error('Không nhận được URL thanh toán từ VNPAY.');
                }
            } catch (e) {
                console.error('Error processing VNPAY payment:', e);
                showAlert(`Lỗi khi tạo thanh toán VNPAY: ${e.message}`, 'error');
                return false;
            }
        }

