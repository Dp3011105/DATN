            try {
                const response = await fetch('https://localhost:7169/api/BanHangTK/hinhthucthanhtoan', { method: 'GET' });
                if (!response.ok) throw new Error(`HTTP error! Status: ${response.status}`);
                const paymentMethods = await response.json();
