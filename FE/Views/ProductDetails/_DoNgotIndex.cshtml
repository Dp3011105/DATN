@model List<FE.Models.DoNgot>

<div class="card">
    <div class="card-header">
        <h3>Danh sách Độ Ngọt</h3>
        <a href="/ProductDetails/DoNgotCreate" class="btn btn-primary">Thêm mới</a>
    </div>
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Mức độ</th>
                    <th>Ghi chú</th>
                    <th>Trạng thái</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ID_DoNgot</td>
                        <td>@item.Muc_Do</td>
                        <td>@item.Ghi_Chu</td>
                        <td>@(item.Trang_Thai ? "Hoạt động" : "Không hoạt động")</td>
                        <td>
                            <a href="/ProductDetails/DoNgotDetails/@item.ID_DoNgot" class="btn btn-sm btn-info">Chi tiết</a>
                            <a href="/ProductDetails/DoNgotEdit/@item.ID_DoNgot" class="btn btn-sm btn-warning">Sửa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>