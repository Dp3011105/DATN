@model FE.Models.Size

<div class="card">
    <div class="card-header">
        <h3>Sửa Size</h3>
    </div>
    <div class="card-body">
        <form asp-action="SizeEdit" method="post">
            <input type="hidden" asp-for="ID_Size" />
            <div class="form-group">
                <label asp-for="SizeName"></label>
                <input asp-for="SizeName" class="form-control" />
                <span asp-validation-for="SizeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gia"></label>
                <input asp-for="Gia" class="form-control" type="number" />
                <span asp-validation-for="Gia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trang_Thai"></label>
                <input asp-for="Trang_Thai" type="checkbox" />
            </div>
            <button type="submit" class="btn btn-primary">Cập nhật</button>
            <a href="/ProductDetails/SizeIndex" class="btn btn-secondary">Quay lại</a>
        </form>
    </div>
</div>