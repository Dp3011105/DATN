@model List<FE.Models.LuongDa>

<div class="card">
    <div class="card-header">
        <h3>Danh sách Lượng Đá</h3>
        <a href="/ProductDetails/LuongDaCreate" class="btn btn-primary">Thêm mới</a>
    </div>
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Tên Lượng Đá</th>
                    <th>Trạng thái</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ID_LuongDa</td>
                        <td>@item.Ten_LuongDa</td>
                        <td>@(item.Trang_Thai ? "Hoạt động" : "Không hoạt động")</td>
                        <td>
                            <a href="/ProductDetails/LuongDaDetails/@item.ID_LuongDa" class="btn btn-sm btn-info">Chi tiết</a>
                            <a href="/ProductDetails/LuongDaEdit/@item.ID_LuongDa" class="btn btn-sm btn-warning">Sửa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>