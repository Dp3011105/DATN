@model FE.Models.LuongDa

<div class="card">
    <div class="card-header">
        <h3>Chi tiết Lượng Đá</h3>
    </div>
    <div class="card-body">
        <p><strong>ID:</strong> @Model.ID_LuongDa</p>
        <p><strong>Tên Lượng Đá:</strong> @Model.Ten_LuongDa</p>
        <p><strong>Trạng thái:</strong> @(Model.Trang_Thai ? "Hoạt động" : "Không hoạt động")</p>
        <a href="/ProductDetails/LuongDaEdit/@Model.ID_LuongDa" class="btn btn-primary">Sửa</a>
        <a href="/ProductDetails/LuongDaIndex" class="btn btn-secondary">Quay lại</a>
    </div>
</div>