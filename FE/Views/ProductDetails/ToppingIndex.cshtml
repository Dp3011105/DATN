@model List<FE.Models.Topping>

<div class="card">
    <div class="card-header">
        <h3>Danh sách Topping</h3>
        <a href="/ProductDetails/ToppingCreate" class="btn btn-primary">Thêm mới</a>
    </div>
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Tên</th>
                    <th>Giá</th>
                    <th>Số lượng</th>
                    <th>Ghi chú</th>
                    <th>Trạng thái</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ID_Topping</td>
                        <td>@item.Ten</td>
                        <td>@item.Gia</td>
                        <td>@item.So_Luong</td>
                        <td>@item.Ghi_Chu</td>
                        <td>@(item.Trang_Thai ? "Hoạt động" : "Không hoạt động")</td>
                        <td>
                            <a href="/ProductDetails/ToppingDetails/@item.ID_Topping" class="btn btn-sm btn-info">Chi tiết</a>
                            <a href="/ProductDetails/ToppingEdit/@item.ID_Topping" class="btn btn-sm btn-warning">Sửa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>