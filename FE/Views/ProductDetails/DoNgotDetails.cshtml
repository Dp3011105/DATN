@model FE.Models.DoNgot

<div class="card">
    <div class="card-header">
        <h3>Chi tiết Độ Ngọt</h3>
    </div>
    <div class="card-body">
        <p><strong>ID:</strong> @Model.ID_DoNgot</p>
        <p><strong>Mức độ:</strong> @Model.Muc_Do</p>
        <p><strong>Ghi chú:</strong> @Model.Ghi_Chu</p>
        <p><strong>Trạng thái:</strong> @(Model.Trang_Thai ? "Hoạt động" : "Không hoạt động")</p>
        <a href="/ProductDetails/DoNgotEdit/@Model.ID_DoNgot" class="btn btn-primary">Sửa</a>
        <a href="/ProductDetails/DoNgotIndex" class="btn btn-secondary">Quay lại</a>
    </div>
</div>