@model FE.Models.LuongDa

<div class="card">
    <div class="card-header">
        <h3>Thêm Lượng Đá</h3>
    </div>
    <div class="card-body">
        <form asp-action="LuongDaCreate" method="post">
            <div class="form-group">
                <label asp-for="Ten_LuongDa"></label>
                <input asp-for="Ten_LuongDa" class="form-control" />
                <span asp-validation-for="Ten_LuongDa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trang_Thai"></label>
                <input asp-for="Trang_Thai" type="checkbox" />
            </div>
            <button type="submit" class="btn btn-primary">Thêm</button>
            <a href="/ProductDetails/LuongDaIndex" class="btn btn-secondary">Quay lại</a>
        </form>
    </div>
</div>