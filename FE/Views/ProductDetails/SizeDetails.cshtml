@model FE.Models.Size

<div class="card">
    <div class="card-header">
        <h3>Chi tiết Size</h3>
    </div>
    <div class="card-body">
        <p><strong>ID:</strong> @Model.ID_Size</p>
        <p><strong>Tên Size:</strong> @Model.SizeName</p>
        <p><strong>Giá:</strong> @Model.Gia</p>
        <p><strong>Trạng thái:</strong> @(Model.Trang_Thai ? "Hoạt động" : "Không hoạt động")</p>
        <a href="/ProductDetails/SizeEdit/@Model.ID_Size" class="btn btn-primary">Sửa</a>
        <a href="/ProductDetails/SizeIndex" class="btn btn-secondary">Quay lại</a>
    </div>
</div>