@model FE.Models.Topping

<div class="card">
    <div class="card-header">
        <h3>Chi tiết Topping</h3>
    </div>
    <div class="card-body">
        <p><strong>ID:</strong> @Model.ID_Topping</p>
        <p><strong>Tên:</strong> @Model.Ten</p>
        <p><strong>Giá:</strong> @Model.Gia</p>
        <p><strong>Số lượng:</strong> @Model.So_Luong</p>
        <p><strong>Ghi chú:</strong> @Model.Ghi_Chu</p>
        <p><strong>Trạng thái:</strong> @(Model.Trang_Thai ? "Hoạt động" : "Không hoạt động")</p>
        <a href="/ProductDetails/ToppingEdit/@Model.ID_Topping" class="btn btn-primary">Sửa</a>
        <a href="/ProductDetails/ToppingIndex" class="btn btn-secondary">Quay lại</a>
    </div>
</div>