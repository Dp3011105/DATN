@model List<FE.Models.Size>

<div class="card">
    <div class="card-header">
        <h3>Danh sách Size</h3>
        <a href="/ProductDetails/SizeCreate" class="btn btn-primary">Thêm mới</a>
    </div>
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Tên Size</th>
                    <th>Giá</th>
                    <th>Trạng thái</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ID_Size</td>
                        <td>@item.SizeName</td>
                        <td>@item.Gia</td>
                        <td>@(item.Trang_Thai ? "Hoạt động" : "Không hoạt động")</td>
                        <td>
                            <a href="/ProductDetails/SizeDetails/@item.ID_Size" class="btn btn-sm btn-info">Chi tiết</a>
                            <a href="/ProductDetails/SizeEdit/@item.ID_Size" class="btn btn-sm btn-warning">Sửa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>