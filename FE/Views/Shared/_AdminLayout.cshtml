@using Microsoft.AspNetCore.Identity
@using System.Security.Claims

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            overflow-x: hidden;
        }

        .sidebar {
            background: linear-gradient(180deg, #1e3a8a, #3b82f6);
            min-height: 100vh;
            width: 250px;
            padding: 20px;
            transition: width 0.3s ease;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
        }

            .sidebar.collapsed {
                width: 60px;
            }

                .sidebar.collapsed .sidebar-text,
                .sidebar.collapsed .sidebar-header h3,
                .sidebar.collapsed .sidebar-header p {
                    display: none;
                }

                .sidebar.collapsed .nav-link {
                    justify-content: center;
                    padding: 10px;
                }

                .sidebar.collapsed .nav-icon {
                    margin-right: 0;
                }

        .main-content {
            margin-left: 250px;
            transition: margin-left 0.3s ease;
            width: calc(100% - 250px);
        }

            .main-content.collapsed {
                margin-left: 60px;
                width: calc(100% - 60px);
            }

        .nav-link {
            color: white;
            transition: all 0.3s ease;
            padding: 10px;
            border-radius: 5px;
            margin-bottom: 5px;
            display: flex;
            align-items: center;
            position: relative;
        }

            .nav-link:hover {
                background-color: rgba(255,255,255,0.1);
                transform: translateX(5px);
            }

        .nav-icon {
            margin-right: 10px;
        }

        .toggle-btn {
            position: absolute;
            top: 20px;
            right: -15px;
            background: #fff;
            border: 1px solid #ddd;
            border-radius: 50%;
            width: 30px;
            height: 30px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            z-index: 1001;
        }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="d-flex">
        <nav class="sidebar" id="sidebar">
            <div class="toggle-btn" onclick="toggleSidebar()">
                <i class="fas fa-bars"></i>
            </div>
            <div class="sidebar-header text-white text-center mb-4">
                <h3>Admin Panel</h3>
            </div>
            <ul class="navbar-nav flex-column">
                <li class="nav-item">
                    <a href="@Url.Action("Index", "Admintrangchu")" class="nav-link" title="Trang chủ">
                        <i class="fas fa-house nav-icon"></i>
                        <span class="sidebar-text">Trang chủ</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("Index", "Product")" class="nav-link" title="Quản lý sản phẩm">
                        <i class="fas fa-box-open nav-icon"></i>
                        <span class="sidebar-text">Quản lý sản phẩm</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("Index", "NhanVien")" class="nav-link" title="Quản lý nhân viên">
                        <i class="fas fa-user-tie nav-icon"></i>
                        <span class="sidebar-text">Quản lý nhân viên</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("Index", "KhachHang")" class="nav-link" title="Quản lý khách hàng">
                        <i class="fas fa-users nav-icon"></i>
                        <span class="sidebar-text">Quản lý khách hàng</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("Index", "AdminQuanLyVoucher")" class="nav-link" title="Quản lý voucher khách hàng">
                        <i class="fas fa-ticket nav-icon"></i>
                        <span class="sidebar-text">Quản lý voucher</span>
                    </a>
                </li>
                <li class="nav-item">

                    <a href="@Url.Action("index", "Thongke")" class="nav-link" title="Quản lý Thống kê">
                        <i class="fas fa-chart-bar nav-icon"></i>
                        <span class="sidebar-text">Quản lý Thống kê</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("Index", "TaiKhoan")" class="nav-link" title="Quản lý tài khoản">
                        <i class="fas fa-id-card nav-icon"></i>
                        <span class="sidebar-text">Quản lý tài khoản</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("Index", "VaiTro")" class="nav-link" title="Quản lý vai trò">
                        <i class="fas fa-user-shield nav-icon"></i>
                        <span class="sidebar-text">Quản lý vai trò</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("Index", "TaiKhoanVaiTro")" class="nav-link" title="Quản lý phân quyền">
                        <i class="fas fa-lock nav-icon"></i>
                        <span class="sidebar-text">Quản lý phân quyền</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("OnlineOrders", "Admin")" class="nav-link" title="Đơn hàng online">
                        <i class="fas fa-shopping-cart nav-icon"></i>
                        <span class="sidebar-text">Đơn hàng online</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("DirectSales", "Admin")" class="nav-link" title="Bán hàng trực tiếp">
                        <i class="fas fa-store nav-icon"></i>
                        <span class="sidebar-text">Bán hàng trực tiếp</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("CustomerFeedback", "Admin")" class="nav-link" title="Phản hồi khách hàng">
                        <i class="fas fa-comment-dots nav-icon"></i>
                        <span class="sidebar-text">Phản hồi khách hàng</span>
                    </a>
                </li>

                <li class="nav-item mt-4">
                    <form asp-controller="Auth" asp-action="Logout" method="post">
                        <button type="submit" class="btn btn-danger w-100" title="Đăng xuất">
                            <i class="fas fa-sign-out-alt nav-icon"></i>
                            <span class="sidebar-text">Đăng xuất</span>
                        </button>
                    </form>
                </li>
            </ul>
        </nav>
        <main class="main-content" id="main-content">
            <div class="container-fluid py-4">
                @RenderBody()
            </div>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            const mainContent = document.getElementById('main-content');
            sidebar.classList.toggle('collapsed');
            mainContent.classList.toggle('collapsed');
            localStorage.setItem('sidebarState', sidebar.classList.contains('collapsed') ? 'collapsed' : 'expanded');
        }
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>