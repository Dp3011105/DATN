<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trà Sữa Ngon</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FE.styles.css" asp-append-version="true" />

    <style>
        /* Layout giữ footer dưới cùng */
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
            background-color: #f4f7fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        main {
            flex: 1;
        }

        /* Navbar */
        .navbar {
            background: linear-gradient(135deg, #007bff, #00c4ff);
            padding: 0.4rem 1rem;
            min-height: 50px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand img {
            height: 40px;
            transition: transform 0.3s ease;
        }

            .navbar-brand img:hover {
                transform: scale(1.05);
            }

        .nav-link {
            color: #fff !important;
            font-size: 0.9rem;
            padding: 0.3rem 0.6rem;
            font-weight: 500;
            transition: color 0.3s ease;
        }

            .nav-link:hover {
                color: #ffeb3b !important;
            }

        .navbar-toggler {
            padding: 0.2rem 0.4rem;
            font-size: 0.9rem;
            border-color: #fff;
        }

        /* Nút Đơn hàng */
        .order-link {
            display: flex;
            align-items: center;
            gap: 5px;
            color: #fff !important;
            font-size: 0.9rem;
            padding: 0.3rem 0.6rem;
            border-radius: 6px;
            background: rgba(255, 255, 255, 0.1);
            transition: background 0.3s ease, transform 0.2s ease;
        }

            .order-link i {
                font-size: 1rem;
            }

            .order-link:hover {
                background: rgba(255, 255, 255, 0.25);
                transform: scale(1.05);
                color: #ffeb3b !important;
            }

        /* Footer */
        .footer {
            background: linear-gradient(135deg, #1e88e5, #42a5f5, #64b5f6);
            color: #fff;
            padding: 0.4rem 0;
            text-align: center;
            font-size: 0.8rem;
            line-height: 1.2;
        }

            .footer a {
                color: #ffe082;
                text-decoration: none;
                transition: color 0.3s ease;
            }

                .footer a:hover {
                    color: #fff;
                }

        .container-fluid {
            max-width: 1400px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="/Logo/logo.png" alt="Trà Sữa Ngon Logo" class="img-fluid" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link animate__animated animate__fadeIn"
                               asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (Context.Request.Cookies["UserData"] != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link order-link animate__animated animate__fadeIn"
                                   asp-controller="QLDonHangTk" asp-action="Index">
                                    <i class="fas fa-box-open"></i> Đơn hàng
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link animate__animated animate__fadeIn"
                                   asp-controller="Account" asp-action="Logout">Đăng xuất</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link animate__animated animate__fadeIn"
                                   asp-controller="Account" asp-action="Login">Đăng nhập</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link animate__animated animate__fadeIn"
                                   asp-controller="Account" asp-action="Register">Đăng ký</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            &copy; 2025 - Trà Sữa Ngon -
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Extract ID_Khach_Hang from UserData cookie
        function getCustomerId() {
            const userData = "@Context.Request.Cookies["UserData"]";
            if (userData) {
                try {
                    const parsedData = JSON.parse(userData);
                    return parsedData.ID_Khach_Hang || null;
                } catch (e) {
                    console.error("Lỗi khi phân tích cookie UserData:", e);
                    return null;
                }
            }
            return null;
        }

        document.addEventListener("DOMContentLoaded", function () {
            const customerId = getCustomerId();
            if (customerId) {
                console.log("ID Khách Hàng:", customerId);
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
