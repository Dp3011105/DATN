        // Lấy ID khách hàng từ cookie
        function getCustomerId() {
            const cookies = document.cookie.split(';');
            let userData = null;
            for (let cookie of cookies) {
                const [name, value] = cookie.trim().split('=');
                if (name === 'UserData') {
                    userData = value;
                    break;
                }
            }
            if (userData) {
                try {
                    // Decode chuỗi cookie để xử lý các ký tự đặc biệt
                    const decodedData = decodeURIComponent(userData);
                    const parsedData = JSON.parse(decodedData);
                    return parsedData.ID_Khach_Hang || null;
                } catch (e) {
                    console.error("Lỗi khi parse cookie UserData:", e);
                    return null;
                }
            }
            return null;
        }
        // Lấy số lượng sản phẩm từ cookie guestCart
        function getGuestCartCount() {
            const guestCart = getCookie('guestCart');
            return guestCart ? guestCart.length : 0;
        }
        // Hàm lấy cookie
        function getCookie(name) {
            const nameEQ = name + "=";
            const cookies = document.cookie.split(';');
            for (let cookie of cookies) {
                cookie = cookie.trim();
                if (cookie.startsWith(nameEQ)) {
                    try {
                        return JSON.parse(decodeURIComponent(cookie.substring(nameEQ.length)));
                    } catch (e) {
                        console.error(`Error parsing cookie ${name}:`, e);
                        return null;
                    }
                }
            }
            return null;
        }
        // Gọi API hoặc cookie để lấy số lượng sản phẩm trong giỏ hàng
        async function fetchCartCount() {
            const customerId = getCustomerId();
            const cartCountElement = document.getElementById('cartCount');
            if (!customerId) {
                // Trường hợp khách vãng lai: lấy số lượng từ cookie guestCart
                const cartCount = getGuestCartCount();
                cartCountElement.textContent = cartCount;
                return;
            }
            // Trường hợp người dùng đăng nhập: gọi API
            try {
                const response = await fetch(`https://localhost:7169/api/Gio_Hang/${customerId}`);
                if (!response.ok) {
                    throw new Error(`HTTP error! Status: ${response.status}`);
                }
                const data = await response.json();
                const cartCount = data.chi_Tiet_Gio_Hang ? data.chi_Tiet_Gio_Hang.length : 0;
                cartCountElement.textContent = cartCount;
            } catch (error) {
                console.error('Lỗi khi lấy dữ liệu giỏ hàng:', error);
                cartCountElement.textContent = '0';
            }
        }
        // Gọi hàm fetchCartCount khi trang được tải
        document.addEventListener('DOMContentLoaded', fetchCartCount);
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
