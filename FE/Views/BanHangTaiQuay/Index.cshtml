    async function decQty(i){
      const it = CUR().cart[i];
      if(!it) return;
      if(it.soLuong<=1){
        await removeItem(i);
        return;
      }
      // Giảm 1 -> release 1 ở BE
      const relRes = await callReleaseAPI(CUR().holdId, toHoldItems([{ ID_San_Pham: it.sanPhamId, SoLuong: 1 }]));
      if (!relRes.ok) {
        alert('Khôi phục tồn kho thất bại: ' + (relRes.message || ''));
