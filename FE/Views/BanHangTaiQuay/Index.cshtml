    async function taoHoaDon(){
      const CART = CUR().cart;
      if(CART.length===0){ alert('Giỏ hàng trống.'); return; }

      // kiểm tồn lần cuối ở client theo tồn khả dụng
      for (const it of CART) {
        const avail = getAvailable(it.sanPhamId) + it.soLuong; // đã giữ chỗ, nên cho phép đến đúng số đang có
        if (it.soLuong > avail) {
          alert(`"${it.ten}" đã vượt tồn.\nKhả dụng: ${avail}, bạn đang đặt: ${it.soLuong}`);
          return;
        }
      }

      const method = parseInt(document.getElementById('selPay').value, 10) || 1;
      CUR().payMethod = String(method);
      if (method === 3) { openQRModal(); return; }
      await reallyCreateHoaDon();
    }

    async function reallyCreateHoaDon(){
      syncTabFromForm();
      const t = CUR();
      const CART = t.cart;

      const btn = document.getElementById('btnCreate');
      btn.disabled = true;

      const tam  = CART.reduce((s,it)=> s + (it.donGia + it.sizeExtra + it.tienTopping)*it.soLuong, 0);
      const giam = Math.min(t.discount||0, tam*0.5);

      const loai = t.loai || 'TaiQuay';
      const shipAddr = t.shipAddr || '';
      if (loai === 'GiaoHang' && !shipAddr) {
        alert('Vui lòng nhập địa chỉ giao hàng.');
        btn.disabled = false;
        return;
      }

      // Gộp SĐT vào ghi chú
      const noteCombined = t.phone ? `[SDT: ${t.phone}] ${t.note||''}` : (t.note||'');

      const payload = {
        HinhThucThanhToanId: parseInt(t.payMethod||'1',10) || 1,
        LoaiHoaDon: loai,
        KhachHang_SDT: null,
        GhiChu: noteCombined,
        VoucherId: t.voucher?.id || null,
        VoucherCode: t.voucher?.code || (document.getElementById('txtVoucher').value || '').trim() || null,
        TongTien: tam,
        TienGiam: giam,
        DiaChiTuNhap: loai === 'GiaoHang' ? shipAddr : null,
        Items: CART.map(it=>({
          SanPhamId: it.sanPhamId,
          SoLuong: it.soLuong,
          DonGia: it.donGia,
          DoNgotId: it.doNgotId,
          LuongDaId: it.luongDaId,
          SizeId: it.sizeId,
          ToppingIds: it.toppingIds
        }))
      };

      try{
        const res = await fetch('/BanHangTaiQuay/TaoHoaDonTaiQuay', {
          method:'POST',
          headers:{ 'Content-Type':'application/json', 'RequestVerificationToken': getAFT() },
          body: JSON.stringify(payload)
        });
        const text = await res.text();
        let data; try{ data = JSON.parse(text) } catch { data = { success:false, message:text } }

        if (!res.ok || !data.success){
          alert(data.message || `Lỗi ${res.status}: ${res.statusText}\n${text}`);
          btn.disabled = false;
          return;
        }

        // Preview
        const inv = {
          ID: data.id || null, Code: data.code || null, NgayLap: new Date(),
          KhachHang_SDT: null,
          LoaiHoaDon: payload.LoaiHoaDon,
          DiaChi: payload.DiaChiTuNhap,
          HinhThucThanhToanId: payload.HinhThucThanhToanId,
          GhiChu: payload.GhiChu,
          VoucherCode: (t.voucher?.code || null),
          Tong: tam, Giam: giam, ThanhToan: tam - giam,
          Items: CART.map(it=>({
            Ten: it.ten, DonGia: it.donGia, SizeExtra: it.sizeExtra, SizeName: it.sizeName,
            SoLuong: it.soLuong, TienTopping: it.tienTopping||0,
            DoNgotName: findName(OPTIONS.doNgots,'ID_DoNgot','Muc_Do',it.doNgotId),
            LuongDaName: findName(OPTIONS.luongDas,'ID_LuongDa','Ten_LuongDa',it.luongDaId) || findName(OPTIONS.luongDas,'ID_LuongDa','Muc_Da',it.luongDaId),
            ToppingNames: (it.toppingIds||[]).map(id=>{
              const o=(OPTIONS.toppings||[]).find(tp=>tp.ID_Topping==id);
              return o ? (o.Ten || o.Ten_Topping || ('Topping #' + id)) : ('Topping #' + id);
            })
          }))
        };

        // Chốt bán: giảm tồn gốc và bỏ giữ chỗ của tab hiện tại (không cần gọi khoi-phuc-ton – vì đã bán)
        for (const it of CART){
          const baseNow = getBase(it.sanPhamId);
          const newBase = Math.max(0, baseNow - it.soLuong);
          const src = SOURCE.find(p=>p.ID_San_Pham==it.sanPhamId);
          if (src) src.__StockBase = newBase;
        }
        // xoá cart -> bỏ giữ chỗ -> rebuild reserved
        t.cart = [];
        t.voucher = null; t.discount = 0; t.payable = 0; t.phone=''; t.note=''; t.shipAddr=''; t.loai='TaiQuay';
        rebuildReserved();

        // refresh UI
        renderTabs();
        syncFormFromTab();
        searchProducts(PAGE);
        renderCart();

        openPrintModal(inv);

      }catch(e){
        alert('Lỗi gọi API FE: ' + (e?.message || e));
      } finally {
        btn.disabled = false;
      }
    }

    function buildInitialState(){
      TABS = [ newEmptyTab() ];
      ACTIVE = 0;
      renderTabs();
      searchProducts(1);
      syncFormFromTab();
      renderCart();
    }

    // ====== RELEASE khi đóng trang (sendBeacon) ======
    function releaseAllTabsOnUnload() {
      try {
        const releases = [];
        for (const t of TABS) {
          if (!t || !t.cart || !t.cart.length) continue;
          const items = t.cart.map(it => ({ ID_San_Pham: it.sanPhamId, SoLuong: it.soLuong }));
          if (!items.length) continue;
          const body = JSON.stringify({ holdId: t.holdId, items });
          const blob = new Blob([body], { type: 'application/json' });
          navigator.sendBeacon(BE_RELEASE_URL, blob);
        }
      } catch (e) {
        // ignore
      }
    }

    window.addEventListener('beforeunload', releaseAllTabsOnUnload);
    window.addEventListener('DOMContentLoaded', buildInitialState);
</script>

