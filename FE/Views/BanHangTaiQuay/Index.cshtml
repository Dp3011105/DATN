<script>
    // ===== Seed
    window.__DATA = {
      products: @Html.Raw(productsJson),
      doNgots : @Html.Raw(doNgotsJson),
      luongDas: @Html.Raw(luongDasJson),
      toppings: @Html.Raw(toppingsJson)
    };

    // Size meta
    const SIZE_META = {
      1: { id:1, name:"Cơ bản",  extra: 0 },
      2: { id:2, name:"Large",   extra: 10000 },
      3: { id:3, name:"X-Large", extra: 15000 },
    };

    // Anti-forgery
    const getAFT = () => document.querySelector('#__afForm input[name="__RequestVerificationToken"]')?.value || '';

    // ====== CONFIG BE ======
    const BE_BASE = "https://localhost:7169";
    const BE_HOLD_URL   = `${BE_BASE}/api/SanPham/giu-ton`;
    const BE_RELEASE_URL= `${BE_BASE}/api/SanPham/khoi-phuc-ton`;

    const imgUrl = path => {
      if (!path) return "https://placehold.co/400x400?text=Drink";
      path = String(path).replace(/^~\//, "/");
      if (path.startsWith("http")) return path;
      return BE_BASE + (path.startsWith("/") ? "" : "/") + path;
    };

    // Helpers
    let PAGE=1, PAGE_SIZE=12, TOTAL=0;
    const esc = s => String(s??'').replace(/&/g,'&amp;').replace(/</g,'&lt;').replace(/>/g,'&gt;').replace(/"/g,'&quot;').replace(/'/g,'&#39;');
    const toNumber = v => {
      if (typeof v === 'number') return Number.isFinite(v) ? v : 0;
      if (v == null) return 0;
      const s = String(v).replace(/[^\d\-]/g,'');
      const n = parseInt(s,10);
      return Number.isFinite(n) ? n : 0;
    };
    const fmtVND = n => { try { return (toNumber(n)||0).toLocaleString('vi-VN',{style:'currency',currency:'VND'}) } catch { return n } };
    const calcOffPct = (orig, promo) => {
      const o = toNumber(orig), p = toNumber(promo);
      if (!o || o <= 0 || !p || p >= o) return null;
      const pct = Math.round((1 - (p / o)) * 100);
      return pct>0 ? pct : null;
    };

    // ===== STOCK MODEL with RESERVATION (client) =====
    const SOURCE = (window.__DATA.products || []).map(p => ({ ...p, __StockBase: pickStock(p) })); // gốc từ BE
    function pickStock(p){
      const keys = ['SoLuongTon','So_Luong','So_Luong_Ton','SoLuong','Stock','TonKho','Ton_kho'];
      for (const k of keys) {
        const raw = p && p[k];
        if (raw !== undefined && raw !== null && String(raw).trim() !== '') {
          const n = toNumber(raw);
          if (!Number.isNaN(n)) return Math.max(0, n);
        }
      }
      return 0;
    }
    // Map productId -> tổng giữ chỗ từ mọi tab
    const RESERVED = new Map();
    const getBase = (pid)=> (SOURCE.find(x=>x.ID_San_Pham==pid)?.__StockBase || 0);
    const getReserved = (pid)=> RESERVED.get(pid) || 0;
    const getAvailable = (pid)=> Math.max(0, getBase(pid) - getReserved(pid));

    function rebuildReserved(){
      RESERVED.clear();
      for (const t of TABS){
        for (const it of t.cart){
          RESERVED.set(it.sanPhamId, (RESERVED.get(it.sanPhamId)||0) + it.soLuong);
        }
      }
    }

    // ====== RESERVATION with BE ======
    function uuidv4() {
      // simple uuid
      return 'xxxxxxxx-xxxx-4xxx-yxxx-xxxxxxxxxxxx'.replace(/[xy]/g, c => {
        const r = Math.random()*16|0, v = c === 'x' ? r : (r&0x3|0x8);
        return v.toString(16);
      });
    }

    // Chuẩn hoá payload items
    const toHoldItems = (rows) => rows
      .filter(r => r && r.ID_San_Pham && r.SoLuong > 0)
      .map(r => ({ ID_San_Pham: r.ID_San_Pham, SoLuong: r.SoLuong }));

    async function callHoldAPI(holdId, items) {
      if (!items.length) return { ok: true };
      try {
        const res = await fetch(BE_HOLD_URL, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ holdId, items })
        });
        if (!res.ok) {
          const t = await res.text();
          return { ok: false, message: t };
        }
        return { ok: true };
      } catch (e) {
        return { ok: false, message: e?.message || e };
      }
    }

    async function callReleaseAPI(holdId, items) {
      if (!items.length) return { ok: true };
      try {
        const res = await fetch(BE_RELEASE_URL, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ holdId, items })
        });
        if (!res.ok) {
          const t = await res.text();
          return { ok: false, message: t };
        }
        return { ok: true };
      } catch (e) {
        return { ok: false, message: e?.message || e };
      }
    }

    // ===== TABS (multi carts) =====
    const MAX_TABS = 5;
    let TABS = []; // { cart:[], voucher:null|{...}, discount:0, payable:0, note:'', shipAddr:'', phone:'', loai, payMethod, holdId }
    let ACTIVE = 0;

    function newEmptyTab(){
      return { cart:[], voucher:null, discount:0, payable:0, phone:'', note:'', shipAddr:'', loai:'TaiQuay', payMethod:'1', holdId: uuidv4() };
    }

    function renderTabs(){
      const ul = document.getElementById('cartTabs');
      ul.innerHTML = '';
      TABS.forEach((t, i) => {
        const li = document.createElement('li'); li.className='nav-item';
        const a = document.createElement('button');
        a.className = 'nav-link' + (i===ACTIVE ? ' active' : '');
        a.type = 'button';
        a.role = 'tab';
        a.textContent = `Hoá đơn ${i+1}`;
        a.onclick = ()=>switchTab(i);

        const close = document.createElement('button');
        close.className='tab-close ms-2';
        close.innerHTML='&times;';
        close.title='Đóng tab';
        close.onclick=async (e)=>{
          e.stopPropagation();
          await closeTab(i);
        };

        li.appendChild(a);
        if (TABS.length>1) a.appendChild(close);
        ul.appendChild(li);
      });
    }

    function addTab(){
      if (TABS.length >= MAX_TABS){ alert('Đã tối đa 5 hoá đơn chờ.'); return; }
      TABS.push(newEmptyTab());
      ACTIVE = TABS.length - 1;
      renderTabs();
      syncFormFromTab();
      renderCart();
    }

    async function closeTab(idx){
      if (TABS.length === 1){ // luôn giữ ít nhất 1 tab
        await clearCart(); return;
      }
      // Trả lại BE phần đang giữ của tab này
      const t = TABS[idx];
      const rel = t.cart.reduce((arr, it)=>{
        arr.push({ ID_San_Pham: it.sanPhamId, SoLuong: it.soLuong });
        return arr;
      }, []);
      if (rel.length) {
        await callReleaseAPI(t.holdId, toHoldItems(rel)); // không chặn UI nếu fail
      }
      // Loại bỏ tab
      TABS.splice(idx, 1);
      if (ACTIVE >= TABS.length) ACTIVE = TABS.length - 1;
      rebuildReserved();
      renderTabs();
      syncFormFromTab();
      searchProducts(PAGE);
      renderCart();
    }

    function switchTab(i){
      ACTIVE = i;
      renderTabs();
      syncFormFromTab();
      renderCart();
    }

    // Helpers thao tác state tab hiện tại
    const CUR = ()=> TABS[ACTIVE];
    const cartQtyOf = (pid) => CUR().cart.filter(x=>x.sanPhamId==pid).reduce((s,x)=>s+x.soLuong,0);

    // ===== OPTIONS cache
    const OPTIONS = { doNgots : window.__DATA.doNgots  || [], luongDas: window.__DATA.luongDas || [], toppings: window.__DATA.toppings || [] };
    const __ALLOWED_CACHE = {};
    async function fetchAllowedOptions(productId){
      if (__ALLOWED_CACHE[productId]) return __ALLOWED_CACHE[productId];
      try{
        const res = await fetch(`${BE_BASE}/api/SanPham/${productId}`);
        if(!res.ok) throw new Error(await res.text());
        const p = await res.json();
        const allowed = {
          sizeIds   : (p.sizes    || []).filter(x => x.trang_Thai).map(x => x.iD_Size),
          doNgotIds : (p.doNgots  || []).filter(x => x.trang_Thai).map(x => x.iD_DoNgot),
          luongDaIds: (p.luongDas || []).filter(x => x.trang_Thai).map(x => x.iD_LuongDa),
          toppingIds: (p.toppings || []).filter(x => x.trang_Thai && (x.so_Luong??0)>0).map(x => x.iD_Topping),
        };
        if (!allowed.sizeIds.length) allowed.sizeIds = [1];
        __ALLOWED_CACHE[productId] = allowed;
        return allowed;
      }catch(e){
        console.warn('fetchAllowedOptions error', e);
        return { sizeIds:[1], doNgotIds:[], luongDaIds:[], toppingIds:[] };
      }
    }

