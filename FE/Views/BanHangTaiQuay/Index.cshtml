    // TÍNH LẠI – tự huỷ voucher khi không đủ điều kiện
    function recalcTotals(){
      const t = CUR();
      const tam = t.cart.reduce((s,it)=> s + (it.donGia + it.sizeExtra + it.tienTopping)*it.soLuong, 0);

      if (t.voucher) {
        if (t.voucher.minOrder && tam < t.voucher.minOrder) {
          cancelVoucher('Đơn đã giảm xuống dưới mức tối thiểu — voucher đã huỷ.');
        }
      }

      let giam = 0;
      if (t.voucher) {
        if (t.voucher.type === 'percent') {
          const pct = Number(t.voucher.pct) || 0;
          giam = tam * (pct / 100);
        } else if (t.voucher.type === 'fixed') {
          giam = Number(t.voucher.amount) || 0;
        }
        giam = Math.min(giam, tam * 0.5);
        if (giam <= 0) {
          cancelVoucher('Voucher không còn mang lại giảm giá – đã huỷ.');
          giam = 0;
        } else {
          const msg = document.getElementById('voucherMsg');
          if (msg && t.voucher.type === 'percent') {
            msg.textContent = `Áp dụng ${t.voucher.pct}% (đã áp trần 50% nếu cần). Giảm ${fmtVND(giam)}.`;
          }
        }
      }

      t.discount = giam;
      t.payable  = Math.max(0, tam - giam);

      document.getElementById('lblTamTinh').textContent   = fmtVND(tam);
      document.getElementById('lblGiam').textContent      = giam > 0 ? `- ${fmtVND(giam)}` : '0';
      document.getElementById('lblThanhToan').textContent = fmtVND(t.payable);
    }

