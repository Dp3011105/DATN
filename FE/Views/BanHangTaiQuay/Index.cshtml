    async function applyVoucher(){
      const code = (document.getElementById('txtVoucher').value||'').trim();
      const t = CUR();

      if(!code){
        cancelVoucher('');
        recalcTotals();
        return;
      }

      const tam = t.cart.reduce((s,it)=> s + (it.donGia + it.sizeExtra + it.tienTopping)*it.soLuong, 0);

      try{
        const res = await fetch('/BanHangTaiQuay/CheckVoucher', {
          method:'POST',
          headers:{ 'Content-Type':'application/json', 'RequestVerificationToken': getAFT() },
          body: JSON.stringify({ Code: code, Subtotal: tam })
        });

        const text = await res.text();
        let data; try { data = JSON.parse(text) } catch { data = {}; }

        const success    = data.Success    ?? data.success;
        const message    = data.Message    ?? data.message;
        const discount   = Number(data.Discount ?? data.discount) || 0;
        const voucherId  = data.VoucherId  ?? data.voucherId ?? data.id_Voucher ?? data.ID_Voucher ?? 0;
        const codeReturn = data.Code       ?? data.code      ?? data.ma_Voucher ?? data.Ma_Voucher ?? code;
        let pct          = Number(data.Percentage ?? data.percentage ?? data.Phan_Tram_Giam) || 0;
        const minOrder   = Number(data.MinOrder   ?? data.minOrder ?? data.Yeu_Cau_Toi_Thieu) || 0;

        if(!res.ok || !success){
          cancelVoucher(message || 'Voucher không hợp lệ.');
          recalcTotals();
          return;
        }

        if (!pct && tam > 0) { pct = Math.round((discount / tam) * 100); }

        t.voucher = { id: voucherId, code: codeReturn, pct, minOrder, type:'percent' };
        t.discount = discount;
        const msg = document.getElementById('voucherMsg');
        if (msg) msg.textContent = `${message || 'Áp dụng voucher thành công.'} Giảm ${fmtVND(t.discount)}.`;
        recalcTotals();

      }catch(e){
        cancelVoucher('Lỗi gọi API voucher: ' + (e?.message || e));
        recalcTotals();
      }
    }

    async function clearCart(){
      const t = CUR();
      if (t.cart.length) {
        const items = t.cart.map(it => ({ ID_San_Pham: it.sanPhamId, SoLuong: it.soLuong }));
        // trả lại BE
        const relRes = await callReleaseAPI(t.holdId, toHoldItems(items));
        if (!relRes.ok) {
          alert('Khôi phục tồn kho thất bại: ' + (relRes.message || ''));
        }
      }
      t.cart = [];
      cancelVoucher('');
      rebuildReserved();
      searchProducts(PAGE);
      renderCart();
    }

