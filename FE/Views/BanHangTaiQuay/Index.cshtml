    async function setQty(i,val){
      const it = CUR().cart[i];
      if(!it) return;
      let v=parseInt(val)||1; if(v<1)v=1;
      const current = it.soLuong;
      const delta = v - current;
      if (delta === 0) return;

      if (delta > 0) {
        if (!ensureNotOverStock(it.sanPhamId, delta)) {
          // giữ nguyên
          renderCart();
          return;
        }
        const holdRes = await callHoldAPI(CUR().holdId, toHoldItems([{ ID_San_Pham: it.sanPhamId, SoLuong: delta }]));
        if (!holdRes.ok) {
          alert('Giữ tạm tồn kho thất bại: ' + (holdRes.message || ''));
          renderCart();
          return;
        }
        it.soLuong = v;
      } else {
        // giảm -> release abs(delta)
        const releaseQty = Math.abs(delta);
        const relRes = await callReleaseAPI(CUR().holdId, toHoldItems([{ ID_San_Pham: it.sanPhamId, SoLuong: releaseQty }]));
        if (!relRes.ok) {
          alert('Khôi phục tồn kho thất bại: ' + (relRes.message || ''));
          renderCart();
          return;
        }
        it.soLuong = v;
      }

      rebuildReserved(); searchProducts(PAGE); renderCart();
    }

