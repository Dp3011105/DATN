        border-radius: 0.5rem;
        border: 1px solid #e0e0e0;
        text-align: center;
    }

        .table-custom thead {
            background: linear-gradient(135deg, #1e40af, #3b82f6);
            color: #fff;
        }

        .table-custom tbody tr:hover {
            background: rgba(59, 130, 246, 0.08);
        }

    /* Nút bấm */
    .btn-sm {
        border-radius: 0.3rem;
        font-weight: 500;
        padding: 6px 12px;
    }

    /* Badge trạng thái */
    .badge-active {
        background: #e6f4ea;
        color: #1e7e34;
        padding: 0.4em 0.7em;
        border-radius: 0.3rem;
        font-size: 0.85rem;
