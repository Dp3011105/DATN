        </div>
        <!-- Inactive Products Pagination -->
        <div class="pagination-container">
            <ul class="pagination">
                <li class="@(inactivePage == 1 ? "disabled" : "")">
                    <a href="@Url.Action("Index", new { searchTerm = ViewBag.SearchTerm, statusFilter = ViewBag.StatusFilter, promotionFilter = ViewBag.PromotionFilter, quantityFilter = ViewBag.QuantityFilter, sortOrder = sortOrder, activePage = activePage, inactivePage = inactivePage - 1 })">&laquo;</a>
                </li>
                @for (int i = 1; i <= totalInactivePages; i++)
