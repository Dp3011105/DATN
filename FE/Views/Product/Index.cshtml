@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function () {
            const searchInput = $('#searchInput');
            const searchButton = $('#searchButton');
            const sortSelect = $('#sortSelect');
            const showActive = $('#showActive');
            const showInactive = $('#showInactive');
            const activeProducts = $('#activeProducts');
            const inactiveProducts = $('#inactiveProducts');
            const activeTable = $('#activeTable');
            const inactiveTable = $('#inactiveTable');
            const tables = [activeTable, inactiveTable];

            function filterProducts() {
                const searchTerm = searchInput.val().toLowerCase().trim();
                tables.forEach(table => {
                    table.find('.product-row').each(function () {
                        const name = $(this).data('name') || '';
                        $(this).toggle(name.includes(searchTerm));
                    });
                });
            }

            function sortProducts(table, sortType) {
                const rows = table.find('.product-row').get();
                rows.sort(function (a, b) {
                    const idA = parseInt($(a).data('id'));
                    const idB = parseInt($(b).data('id'));
                    const priceA = parseFloat($(a).data('price'));
                    const priceB = parseFloat($(b).data('price'));

                    if (sortType === 'id-asc') {
                        return idA - idB;
                    } else if (sortType === 'id-desc') {
                        return idB - idA;
                    } else if (sortType === 'price-asc') {
                        return priceA - priceB;
                    } else if (sortType === 'price-desc') {
                        return priceB - priceA;
                    }
                    return 0;
                });
                $.each(rows, function (index, row) {
                    table.append(row);
                });
            }

            searchButton.on('click', function () {
                filterProducts();
            });

            searchInput.on('keyup', function (e) {
                if (e.key === 'Enter') filterProducts();
            });

            sortSelect.on('change', function () {
                const sortType = $(this).val();
                sortProducts(activeTable, sortType);
                sortProducts(inactiveTable, sortType);
                // Gửi form để cập nhật sortOrder trên server
                $(this).closest('form').submit();
            });

            showActive.on('click', function () {
                activeProducts.removeClass('d-none');
                inactiveProducts.addClass('d-none');
                showActive.addClass('btn-primary active').removeClass('btn-outline-primary');
                showInactive.addClass('btn-outline-primary').removeClass('btn-primary active');
            });

            showInactive.on('click', function () {
                inactiveProducts.removeClass('d-none');
                activeProducts.addClass('d-none');
                showInactive.addClass('btn-primary active').removeClass('btn-outline-primary');
                showActive.addClass('btn-outline-primary').removeClass('btn-primary active');
            });
        });

        function filterStatus(type) {
            let url = '@Url.Action("Index", "Product")';
            let search = $('#searchInput').val() || "";
            let sort = $('#sortSelect').val() || "id-desc";
            let activePage = @activePage;
            let inactivePage = @inactivePage;
            if (type === 'all') window.location.href = `${url}?searchTerm=${encodeURIComponent(search)}&sortOrder=${sort}&activePage=${activePage}&inactivePage=${inactivePage}`;
            else if (type === 'active') window.location.href = `${url}?searchTerm=${encodeURIComponent(search)}&statusFilter=true&sortOrder=${sort}&activePage=${activePage}&inactivePage=${inactivePage}`;
            else if (type === 'inactive') window.location.href = `${url}?searchTerm=${encodeURIComponent(search)}&statusFilter=false&sortOrder=${sort}&activePage=${activePage}&inactivePage=${inactivePage}`;
