                    <li class="@(i == inactivePage ? "active" : "")">
                        <a href="@Url.Action("Index", new { searchTerm = ViewBag.SearchTerm, statusFilter = ViewBag.StatusFilter, promotionFilter = ViewBag.PromotionFilter, quantityFilter = ViewBag.QuantityFilter, sortOrder = sortOrder, activePage = activePage, inactivePage = i })">@i</a>
