@model UpdateProductViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Cập nhật sản phẩm";
}

<style>
    /* Container chính */
    .admin-container {
        background: linear-gradient(135deg, #f7f5ff, #fff0f6);
        border-radius: 24px;
        padding: 35px;
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.05);
        margin-bottom: 35px;
        max-width: 1400px;
        margin-left: auto;
        margin-right: auto;
    }

    /* Form Card */
    .form-card {
        background: #ffffff;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.06);
        padding: 30px;
    }

    .form-header {
        background: linear-gradient(135deg, #66CCFF, #f687b3);
        color: #2d3748;
        padding: 25px;
        text-align: center;
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
        margin: -30px -30px 30px -30px;
        font-family: 'Inter', sans-serif;
        font-weight: 600;
    }

    .form-control, .form-control-file, .form-select {
        border-radius: 12px;
        border: 1px solid #e5e7eb;
        padding: 14px 16px;
        font-size: 1rem;
        font-family: 'Inter', sans-serif;
        background-color: #fafafa;
        transition: all 0.3s ease;
    }

        .form-control:focus, .form-control-file:focus, .form-select:focus {
            border-color: #a78bfa;
            box-shadow: 0 0 10px rgba(167, 139, 250, 0.2);
            background-color: #fff;
            outline: none;
        }

    .form-floating label {
        color: #718096;
        transform: scale(1);
        transition: all 0.2s ease;
        font-family: 'Inter', sans-serif;
    }

    .form-floating:focus-within label,
    .form-floating:not(.form-floating-label) label {
        transform: scale(0.85) translateY(-0.8rem) translateX(0.25rem);
        color: #2d3748;
    }

    .form-control.is-invalid, .form-control-file.is-invalid, .form-select.is-invalid {
        border-color: #f56565;
        box-shadow: 0 0 10px rgba(245, 101, 101, 0.2);
    }

    .form-control.is-valid, .form-control-file.is-valid, .form-select.is-valid {
        border-color: #a78bfa;
        box-shadow: 0 0 10px rgba(167, 139, 250, 0.2);
    }

    .form-check {
        margin-bottom: 1.25rem;
    }

    .form-switch .form-check-input {
        height: 2em;
        width: 4em;
        background-color: #edf2f7;
        border: 1px solid #e2e8f0;
    }

        .form-switch .form-check-input:checked {
            background-color: #a78bfa;
            border-color: #a78bfa;
        }

    .img-fluid {
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
        transition: transform 0.4s ease;
    }

        .img-fluid:hover {
            transform: scale(1.1);
        }

    .action-buttons {
        display: flex;
        justify-content: flex-end;
        gap: 20px;
        margin-top: 40px;
        padding-bottom: 20px;
    }

    .btn-custom {
        border-radius: 12px;
        padding: 12px 30px;
        font-weight: 600;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        text-align: center;
        font-family: 'Inter', sans-serif;
    }

        .btn-custom:hover {
            transform: translateY(-4px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

    .btn-submit {
        background: linear-gradient(135deg, #66CCFF, #f687b3);
        border: none;
        color: #2d3748;
    }

    .btn-back {
        background: linear-gradient(135deg, #a0aec0, #718096);
        border: none;
        color: #ffffff;
    }

    .btn-outline-primary {
        border-radius: 12px;
        border-color: #a78bfa;
        color: #a78bfa;
        background-color: #fff;
        transition: all 0.3s ease;
    }

        .btn-outline-primary:hover {
            background-color: #a78bfa;
            color: #fff;
            transform: translateY(-2px);
        }

    .text-danger.small {
        font-size: 0.95rem;
        color: #f56565;
    }

    /* Responsive */
    media (max-width: 768px) {
        .admin-container

    {
        padding: 20px;
    }

    .form-card {
        padding: 20px;
    }

    .action-buttons {
        flex-direction: column-reverse;
        gap: 15px;
    }

    .btn-custom {
        width: 100%;
    }

    .img-fluid {
        max-width: 250px;
    }

    .col-md-2-4 {
        flex: 0 0 20%;
        max-width: 20%;
    }

    }

    body {
        font-family: 'Inter', sans-serif;
        background-color: #f7fafc;
    }

    .container-fluid {
        max-width: 1400px;
    }

    /* Custom column for 5 columns layout */
    .col-md-2-4 {
        flex: 0 0 20%;
        max-width: 20%;
    }
</style>

<div class="admin-container">
    <!-- Notifications -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle-fill me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Edit Form -->
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="form-card">
                <div class="form-header">
                    <h2 class="mb-0 fw-bold display-6">Cập Nhật Sản Phẩm</h2>
                </div>
                <form asp-action="EditProduct" enctype="multipart/form-data" id="editProductForm">
                    <input type="hidden" asp-for="ID_San_Pham" />
                    <input type="hidden" asp-for="CurrentImagePath" />
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-4 text-center"></div>

                    <div class="form-floating mb-5">
                        <input asp-for="TenSanPham" class="form-control" id="tenSanPham" placeholder="Tên sản phẩm" required />
                        <label asp-for="TenSanPham" class="form-label">Tên sản phẩm</label>
                        <span asp-validation-for="TenSanPham" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-5">
                        <input asp-for="Gia" class="form-control" type="number" id="gia" placeholder="Giá" required />
                        <label asp-for="Gia" class="form-label">Giá (VND)</label>
                        <span asp-validation-for="Gia" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-5">
                        <input asp-for="SoLuong" class="form-control" type="number" id="soLuong" placeholder="Số lượng" required />
                        <label asp-for="SoLuong" class="form-label">Số lượng</label>
                        <span asp-validation-for="SoLuong" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-5">
                        <textarea asp-for="MoTa" class="form-control" id="moTa" placeholder="Mô tả" style="height: 180px;"></textarea>
                        <label asp-for="MoTa" class="form-label">Mô tả</label>
                        <span asp-validation-for="MoTa" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-5">
                        <select asp-for="TrangThai" class="form-select" id="trangThai" required>
                            <option value="true" selected="@(Model.TrangThai ? "selected" : null)">Hoạt động</option>
                            <option value="false" selected="@(Model.TrangThai ? null : "selected")">Không hoạt động</option>
                        </select>
                        <label for="trangThai" class="form-label">Trạng thái</label>
                        <span asp-validation-for="TrangThai" class="text-danger small"></span>
                    </div>

                    <div class="mb-5">
                        <label class="form-label fw-bold text-lg">Hình ảnh hiện tại</label>
                        @if (!string.IsNullOrEmpty(Model.CurrentImagePath))
                        {
                            <div class="mb-3 text-center">
                                <img src="@("https://localhost:7169" + Model.CurrentImagePath)" alt="Hình ảnh hiện tại" class="img-fluid" style="max-width: 350px; aspect-ratio: 4/3; object-fit: cover;" />
                            </div>
                        }
                        <div class="form-check form-switch mb-3">
                            <input class="form-check-input" type="checkbox" id="changeImageSwitch" />
                            <label class="form-check-label" for="changeImageSwitch">Thay đổi hình ảnh</label>
                        </div>
                        <div id="imageUploadSection" style="display: none;">
                            <label asp-for="Image" class="form-label">Chọn hình ảnh mới</label>
                            <input asp-for="Image" type="file" class="form-control" accept="image/*" />
                            <span asp-validation-for="Image" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-5">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <label class="form-label fw-bold text-lg">Kích thước</label>
                            <button type="button" class="btn btn-outline-primary btn-sm select-all" data-prefix="size">Chọn tất cả</button>
                        </div>
                        <div class="row g-4">
                            @foreach (var size in ViewBag.Sizes)
                            {
                                <div class="col-md-2-4 col-sm-6 form-check">
                                    <input type="checkbox" name="SelectedSizes" value="@size.ID_Size" class="form-check-input size-checkbox" id="size_@size.ID_Size" @(Model.SelectedSizes.Contains(size.ID_Size) ? "checked" : "") />
                                    <label class="form-check-label" for="size_@size.ID_Size">@size.SizeName @(size.Trang_Thai ? "" : "(Không hoạt động)")</label>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="mb-5">
                        <label class="form-label fw-bold text-lg">Topping</label>
                        <div class="row g-4">
                            @foreach (var topping in ViewBag.Toppings)
                            {
                                <div class="col-md-2-4 col-sm-6 form-check">
                                    <input type="checkbox" name="SelectedToppings" value="@topping.ID_Topping" class="form-check-input" id="topping_@topping.ID_Topping" @(Model.SelectedToppings.Contains(topping.ID_Topping) ? "checked" : "") />
                                    <label class="form-check-label" for="topping_@topping.ID_Topping">@topping.Ten @(topping.Trang_Thai ? "" : "(Không hoạt động)")</label>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="mb-5">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <label class="form-label fw-bold text-lg">Lượng đá</label>
                            <button type="button" class="btn btn-outline-primary btn-sm select-all" data-prefix="luongDa">Chọn tất cả</button>
                        </div>
                        <div class="row g-4">
                            @foreach (var luongDa in ViewBag.LuongDas)
                            {
                                <div class="col-md-2-4 col-sm-6 form-check">
                                    <input type="checkbox" name="SelectedLuongDas" value="@luongDa.ID_LuongDa" class="form-check-input luongDa-checkbox" id="luongDa_@luongDa.ID_LuongDa" @(Model.SelectedLuongDas.Contains(luongDa.ID_LuongDa) ? "checked" : "") />
                                    <label class="form-check-label" for="luongDa_@luongDa.ID_LuongDa">@luongDa.Ten_LuongDa @(luongDa.Trang_Thai ? "" : "(Không hoạt động)")</label>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="mb-5">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <label class="form-label fw-bold text-lg">Độ ngọt</label>
                            <button type="button" class="btn btn-outline-primary btn-sm select-all" data-prefix="doNgot">Chọn tất cả</button>
                        </div>
                        <div class="row g-4">
                            @foreach (var doNgot in ViewBag.DoNgots)
                            {
                                <div class="col-md-2-4 col-sm-6 form-check">
                                    <input type="checkbox" name="SelectedDoNgots" value="@doNgot.ID_DoNgot" class="form-check-input doNgot-checkbox" id="doNgot_@doNgot.ID_DoNgot" @(Model.SelectedDoNgots.Contains(doNgot.ID_DoNgot) ? "checked" : "") />
                                    <label class="form-check-label" for="doNgot_@doNgot.ID_DoNgot">@doNgot.Muc_Do @(doNgot.Trang_Thai ? "" : "(Không hoạt động)")</label>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="action-buttons">
                        <a asp-action="Index" class="btn-custom btn-back">
                            <i class="bi bi-arrow-left me-2"></i>Quay lại
                        </a>
                        <button type="submit" class="btn-custom btn-submit">
                            <i class="bi bi-check-circle me-2"></i>Cập nhật
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Load jQuery first -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <!-- Load validation libraries after jQuery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#editProductForm").validate({
                errorClass: "text-danger",
                highlight: function (element) {
                    $(element).addClass("is-invalid").removeClass("is-valid");
                },
                unhighlight: function (element) {
                    $(element).removeClass("is-invalid").addClass("is-valid");
                },
                errorPlacement: function (error, element) {
                    error.insertAfter(element);
                },
                rules: {
                    Image: {
                        required: false // Không yêu cầu trường Image
                    }
                },
                messages: {
                    Image: {
                        required: "" // Không hiển thị thông báo lỗi nếu Image trống
                    }
                }
            });

            // Hiển thị trường upload khi người dùng bật nút "Thay đổi hình ảnh"
            $('#changeImageSwitch').on('change', function () {
                if ($(this).is(':checked')) {
                    $('#imageUploadSection').show();
                    $('#Image').attr('required', 'required'); // Bắt buộc nếu chọn thay đổi
                } else {
                    $('#imageUploadSection').hide();
                    $('#Image').removeAttr('required'); // Không bắt buộc nếu giữ ảnh cũ
                }
            });

            // Select all functionality
            $('.select-all').on('click', function () {
                const prefix = $(this).data('prefix');
                const checkboxes = $(`input[id^="${prefix}_"]`);
                const allChecked = checkboxes.toArray().every(cb => cb.checked);
                checkboxes.prop('checked', !allChecked);
            });
        });
    </script>
}

