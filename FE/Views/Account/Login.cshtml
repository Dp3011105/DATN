@model FE.Models.LoginModel

@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="login-container d-flex justify-content-center align-items-center min-vh-100">
    <!-- Login Card -->
    <div class="glass-card p-5 shadow-lg">
        <h2 class="text-center mb-4 fw-bold text-white">Đăng Nhập</h2>

        <!-- Notifications -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form asp-action="Login" method="post" id="loginForm" class="mt-3">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3 text-center"></div>

            <div class="mb-3">
                <label asp-for="Ten_Nguoi_Dung" class="form-label text-white">Tên Đăng Nhập</label>
                <input asp-for="Ten_Nguoi_Dung" class="form-control shadow-sm" id="username"
                       placeholder="Ví dụ: user123, john_doe"
                       title="Tên đăng nhập chỉ chứa chữ cái, số, dấu chấm (.) hoặc dấu gạch dưới (_), không chứa dấu."
                       required />
                <span asp-validation-for="Ten_Nguoi_Dung" class="text-danger small"></span>
            </div>

            <div class="mb-2">
                <label asp-for="Mat_Khau" class="form-label text-white">Mật khẩu</label>
                <input asp-for="Mat_Khau" class="form-control shadow-sm" type="password"
                       id="password" placeholder="Nhập mật khẩu"
                       title="Mật khẩu phải từ 6 đến 100 ký tự."
                       required />
                <span asp-validation-for="Mat_Khau" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-end mb-3">
                <a href="@Url.Action("ForgotPassword", "Account")" class="small text-light text-decoration-underline">Quên mật khẩu?</a>
            </div>

            <button type="submit" class="btn btn-glass w-100 mb-2" id="submitButton" disabled>
                <i class="bi bi-box-arrow-in-right me-2"></i>Đăng nhập
            </button>

            <div class="text-center mt-3 text-white">
                <p>Chưa có tài khoản? <a href="@Url.Action("Register", "Account")" class="text-primary fw-bold">Đăng ký ngay</a></p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function () {
            // Thay đổi thông báo validation sang tiếng Việt
            $.extend($.validator.messages, {
                required: "Trường này là bắt buộc.",
                minlength: $.validator.format("Nhập ít nhất {0} ký tự."),
                maxlength: $.validator.format("Không được vượt quá {0} ký tự.")
            });

            $.validator.addMethod("usernameFormat", function (value, element) {
                return this.optional(element) || /^[a-zA-Z0-9_.]+$/.test(value);
            }, "Tên đăng nhập chỉ được chứa chữ cái, số, dấu chấm (.) hoặc dấu gạch dưới (_).");

            $("#loginForm").validate({
                errorClass: "text-danger",
                highlight: function (element) { $(element).addClass("is-invalid").removeClass("is-valid"); },
                unhighlight: function (element) { $(element).removeClass("is-invalid").addClass("is-valid"); },
                rules: {
                    Ten_Nguoi_Dung: { required: true, usernameFormat: true, minlength: 3, maxlength: 50 },
                    Mat_Khau: { required: true, minlength: 6, maxlength: 100 }
                },
                messages: {
                    Ten_Nguoi_Dung: {
                        required: "Tên đăng nhập là bắt buộc.",
                        minlength: "Tên đăng nhập phải từ 3 ký tự trở lên.",
                        maxlength: "Tên đăng nhập không được vượt quá 50 ký tự."
                    },
                    Mat_Khau: {
                        required: "Mật khẩu là bắt buộc.",
                        minlength: "Mật khẩu phải từ 6 ký tự trở lên.",
                        maxlength: "Mật khẩu không được vượt quá 100 ký tự."
                    }
                }
            });

            $("#loginForm input").on("input blur", function () {
                $("#submitButton").prop("disabled", !$("#loginForm").valid());
            });

            $("#loginForm").validate().form();
        });
    </script>
}

