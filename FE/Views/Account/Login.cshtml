                // Thay đổi thông báo validation sang tiếng Việt
                $.extend($.validator.messages, {
                    required: "Trường này là bắt buộc.",
                    minlength: $.validator.format("Nhập ít nhất {0} ký tự."),
                    maxlength: $.validator.format("Không được vượt quá {0} ký tự.")
                });

                $.validator.addMethod("usernameFormat", function (value, element) {
                    return this.optional(element) || /^[a-zA-Z0-9_.]+$/.test(value);
                }, "Tên đăng nhập chỉ được chứa chữ cái, số, dấu chấm (.) hoặc dấu gạch dưới (_).");

                $("#loginForm").validate({
                    errorClass: "text-danger",
                    highlight: function (element) { $(element).addClass("is-invalid").removeClass("is-valid"); },
                    unhighlight: function (element) { $(element).removeClass("is-invalid").addClass("is-valid"); },
                    rules: {
                        Ten_Nguoi_Dung: { required: true, usernameFormat: true, minlength: 3, maxlength: 50 },
                        Mat_Khau: { required: true, minlength: 6, maxlength: 100 }
                    },
                    messages: {
                        Ten_Nguoi_Dung: {
                            required: "Tên đăng nhập là bắt buộc.",
                            minlength: "Tên đăng nhập phải từ 3 ký tự trở lên.",
                            maxlength: "Tên đăng nhập không được vượt quá 50 ký tự."
                        },
                        Mat_Khau: {
                            required: "Mật khẩu là bắt buộc.",
                            minlength: "Mật khẩu phải từ 6 ký tự trở lên.",
                            maxlength: "Mật khẩu không được vượt quá 100 ký tự."
                        }
                    }
                });

                $("#loginForm input").on("input blur", function () {
                    $("#submitButton").prop("disabled", !$("#loginForm").valid());
                });

                $("#loginForm").validate().form();
            });
        </script>
    }
