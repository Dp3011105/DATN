@{
    Layout = null; // Không dùng _Layout
    Context.Response.StatusCode = 404; // Đặt mã lỗi 404 đúng cách
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>404 - Không tìm thấy trang</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            font-family: Arial, Helvetica, sans-serif;
            background: #f8f9fa;
            color: #333;
            text-align: center;
        }

        h1 {
            font-size: 120px;
            margin: 0;
            color: #d32f2f;
        }

        h2 {
            font-size: 32px;
            margin: 10px 0;
        }

        p {
            font-size: 18px;
            margin: 5px 0 20px;
        }

        .countdown {
            font-size: 20px;
            margin: 15px 0;
            color: #ff5722;
            font-weight: bold;
        }

        .btn-back {
            display: inline-block;
            padding: 12px 24px;
            font-size: 18px;
            font-weight: bold;
            background: #007bff;
            color: white;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            text-decoration: none;
            transition: background 0.3s;
        }

            .btn-back:hover {
                background: #0056b3;
            }
    </style>
</head>
<body>
    <h1>404</h1>
    <h2>Trang này không tồn tại </h2>
    <p class="countdown">Tự động quay lại sau <span id="countdown">17</span> giây...</p>
    <button class="btn-back" onclick="history.back()">⬅ Quay lại ngay</button>

    <script>
        let timeLeft = 17;
        const countdownElement = document.getElementById('countdown');
        const countdown = setInterval(() => {
            timeLeft--;
            countdownElement.textContent = timeLeft;
            if (timeLeft <= 0) {
                clearInterval(countdown);
                history.back();
            }
        }, 1000);
    </script>
</body>
</html>
