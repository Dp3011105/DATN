@model FE.Models.ForgotPasswordModel

@{
    ViewData["Title"] = "Quên Mật Khẩu";
}

<div class="container my-5">
    <!-- Success/Error Notifications -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <div class="d-flex align-items-center">
                <i class="bi bi-check-circle-fill me-3" style="font-size: 1.5rem;"></i>
                <div>
                    <strong>Thành công!</strong>
                    <p class="mb-0">@TempData["Success"]</p>
                    <p class="mb-0">Quay lại <a href="@Url.Action("Login", "Account")" class="text-primary fw-bold">Đăng nhập</a> để tiếp tục.</p>
                </div>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <div class="d-flex align-items-center">
                <i class="bi bi-exclamation-triangle-fill me-3" style="font-size: 1.5rem;"></i>
                <div>
                    <strong>Lỗi!</strong>
                    <p class="mb-0">@TempData["Error"]</p>
                </div>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Forgot Password Form -->
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <h2 class="text-center mb-4 fw-bold text-dark">Quên Mật Khẩu</h2>
                    <form asp-action="ForgotPassword" method="post" id="forgotPasswordForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3 text-center"></div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control shadow-sm" id="email"
                                   placeholder="Ví dụ: user@example.com"
                                   title="Vui lòng nhập một địa chỉ email hợp lệ."
                                   required />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg w-100" id="submitButton" disabled>
                            <i class="bi bi-envelope-fill me-2"></i>Gửi Yêu Cầu
                        </button>
                    </form>
                    <div class="text-center mt-3">
                        <p>Quay lại <a href="@Url.Action("Login", "Account")" class="text-primary">Đăng nhập</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function () {
            // Initialize form validation
            var form = $("#forgotPasswordForm").validate({
                errorClass: "text-danger",
                highlight: function (element) {
                    $(element).addClass("is-invalid").removeClass("is-valid");
                },
                unhighlight: function (element) {
                    $(element).removeClass("is-invalid").addClass("is-valid");
                },
                errorPlacement: function (error, element) {
                    error.insertAfter(element);
                },
                rules: {
                    Email: {
                        required: true,
                        email: true,
                        maxlength: 100
                    }
                },
                messages: {
                    Email: {
                        required: "Email là bắt buộc.",
                        email: "Vui lòng nhập một địa chỉ email hợp lệ.",
                        maxlength: "Email không được vượt quá 100 ký tự."
                    }
                }
            });

            // Real-time validation to enable/disable submit button
            $("#forgotPasswordForm input").on("input blur", function () {
                if (form.valid()) {
                    $("#submitButton").prop("disabled", false);
                } else {
                    $("#submitButton").prop("disabled", true);
                }
            });

            // Trigger validation on form load
            $("#forgotPasswordForm").validate().form();
        });
    </script>
}

<style>
    body {
        background-color: #f8f9fa;
    }

    .card {
        border-radius: 8px;
        background-color: #ffffff;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1) !important;
        }

    .form-control {
        border-radius: 6px;
        border: 1px solid #ced4da;
        padding: 10px;
        font-size: 1rem;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.3);
            outline: none;
        }

        .form-control.is-invalid {
            border-color: #dc3545;
            box-shadow: 0 0 5px rgba(220, 53, 69, 0.3);
        }

        .form-control.is-valid {
            border-color: #28a745;
            box-shadow: 0 0 5px rgba(40, 167, 69, 0.3);
        }

    .btn-primary {
        border-radius: 6px;
        background-color: #007bff;
        border: none;
        padding: 12px;
        font-size: 1.1rem;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: scale(1.02);
        }

        .btn-primary:disabled {
            background-color: #6c757d;
            cursor: not-allowed;
        }

    .alert {
        border-radius: 6px;
        margin-bottom: 1.5rem;
        padding: 1.25rem;
    }

    .alert-success {
        background-color: #d4edda;
        border-color: #c3e6cb;
        color: #155724;
    }

    .alert-danger {
        background-color: #f8d7da;
        border-color: #f5c6cb;
        color: #721c24;
    }

    .text-primary {
        color: #007bff !important;
    }

    .form-label {
        font-weight: 500;
        color: #495057;
    }
</style>