                            required: true,
                            email: true,
                            maxlength: 100
                        },
                        Ho_Ten: {
                            required: true,
                            minlength: 2,
                            maxlength: 100
                        },
                        Ten_Nguoi_Dung: {
                            required: true,
                            usernameFormat: true,
                            minlength: 3,
                            maxlength: 50
                        },
                        Mat_Khau: {
                            required: true,
