                        $(element).closest('.form-group').find('.field-validation-error').show();
                    },
                    unhighlight: function (element) {
                        $(element).removeClass("is-invalid").addClass("is-valid");
                        $(element).closest('.form-group').find('.field-validation-error').hide();
                    },
                    errorPlacement: function (error, element) {
                        // Error placement is handled by ASP.NET validation
