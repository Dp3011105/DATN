                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <strong>Lỗi!</strong> @TempData["Error"]
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-action="Register" method="post" id="registerForm" class="mt-2">
                        <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

                        <div class="form-fields">
                            <div class="form-group">
                                <label asp-for="Email" class="form-label">Email *</label>
                                <input asp-for="Email" class="form-control" placeholder="user@example.com" />
                                <span asp-validation-for="Email" class="field-validation-error"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Ho_Ten" class="form-label">Họ tên *</label>
                                <input asp-for="Ho_Ten" class="form-control" placeholder="Nguyễn Văn A" />
                                <span asp-validation-for="Ho_Ten" class="field-validation-error"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Ten_Nguoi_Dung" class="form-label">Tên đăng nhập *</label>
                                <input asp-for="Ten_Nguoi_Dung" class="form-control" placeholder="user123" />
                                <span asp-validation-for="Ten_Nguoi_Dung" class="field-validation-error"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Mat_Khau" class="form-label">Mật khẩu *</label>
                                <div class="input-group">
                                    <input asp-for="Mat_Khau" type="password" class="form-control password-input" id="password" placeholder="Nhập mật khẩu" />
                                    <span class="input-group-text" onclick="togglePassword('password', this)">
                                        <i class="bi bi-eye-slash"></i>
                                    </span>
                                </div>
                                <span asp-validation-for="Mat_Khau" class="field-validation-error"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="ConfirmPassword" class="form-label">Xác nhận mật khẩu *</label>
                                <div class="input-group">
                                    <input asp-for="ConfirmPassword" type="password" class="form-control password-input" id="confirmPassword" placeholder="Xác nhận mật khẩu" />
                                    <span class="input-group-text" onclick="togglePassword('confirmPassword', this)">
                                        <i class="bi bi-eye-slash"></i>
                                    </span>
                                </div>
                                <span asp-validation-for="ConfirmPassword" class="field-validation-error"></span>
                            </div>
                        </div>

                        <div class="form-actions">
                            <button type="submit" class="btn btn-glass w-100" id="submitButton">
                                <i class="bi bi-person-plus-fill me-2"></i>Đăng ký
                            </button>

                            <div class="login-link">
                                <p class="mb-0">Đã có tài khoản? <a href="@Url.Action("Login", "Account")">Đăng nhập ngay</a></p>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Logo + Giới thiệu -->
            <div class="register-image">
                <div class="decorative-icons">
                    <i class="fas fa-user-plus"></i>
                    <i class="fas fa-heart"></i>
                    <i class="fas fa-star"></i>
                </div>

                <div class="logo-section">
                    <div class="logo-container">
                        <div class="logo-img">TB</div>
                        <h3 class="brand-name">The Boy</h3>
                    </div>

                    <div class="shop-intro">
                        <p class="shop-desc">
                            Tham gia cộng đồng <span class="highlight-text">The Boy</span> -
                            Khám phá thế giới trà sữa tuyệt vời!<br><br>
                            🎁 <strong>Ưu đãi thành viên mới</strong><br>
                            🌟 <strong>Tích điểm đổi quà</strong><br>
                            📱 <strong>Đặt hàng dễ dàng</strong><br><br>
                            <em>Đăng ký ngay để không bỏ lỡ những ưu đãi đặc biệt!</em>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br/>
    <br/>
    <br/>
    <br/>
    <br/>
    @section Scripts {
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/additional-methods.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script>
            $(document).ready(function () {
                // Chuyển thông báo validation sang tiếng Việt
                $.extend($.validator.messages, {
                    required: "Trường này là bắt buộc.",
                    email: "Vui lòng nhập địa chỉ email hợp lệ.",
                    minlength: $.validator.format("Nhập ít nhất {0} ký tự."),
                    maxlength: $.validator.format("Không được vượt quá {0} ký tự."),
                    equalTo: "Mật khẩu xác nhận không khớp."
                });

                // Custom validation cho username
                $.validator.addMethod("usernameFormat", function (value, element) {
                    return this.optional(element) || /^[a-zA-Z0-9_.]+$/.test(value) && !/\s/.test(value);
                }, "Tên đăng nhập chỉ chứa chữ cái, số, dấu chấm (.) hoặc dấu gạch dưới (_), không chứa khoảng trắng.");

                // Initialize form validation
                var form = $("#registerForm").validate({
                    errorClass: "text-danger",
