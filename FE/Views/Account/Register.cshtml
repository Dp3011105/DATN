@model FE.Models.RegisterModel

@{
    ViewData["Title"] = "Đăng ký";
}

<div class="container my-5">
    <!-- Success/Error Notifications -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <div class="d-flex align-items-center">
                <i class="bi bi-check-circle-fill me-3" style="font-size: 1.5rem;"></i>
                <div>
                    <strong>Đăng ký thành công!</strong>
                    <p class="mb-0">Mật khẩu đã được gửi đến email của bạn. Kiểm tra email để lấy mật khẩu nhé!</p>
                    <p class="mb-0">Tài khoản của bạn đã được tạo. <a href="@Url.Action("Login", "Account")" class="text-primary fw-bold">Đăng nhập ngay</a> để bắt đầu trải nghiệm!</p>
                </div>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <div class="d-flex align-items-center">
                <i class="bi bi-exclamation-triangle-fill me-3" style="font-size: 1.5rem;"></i>
                <div>
                    <strong>Lỗi!</strong>
                    <p class="mb-0">@TempData["Error"]</p>
                </div>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Register Form -->
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <h2 class="text-center mb-4 fw-bold text-dark">Đăng Ký</h2>
                    <form asp-action="Register" method="post" id="registerForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3 text-center"></div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control shadow-sm" id="email"
                                   placeholder="Ví dụ: user@example.com"
                                   title="Vui lòng nhập một địa chỉ email hợp lệ."
                                   required />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Ho_Ten" class="form-label">Họ tên</label>
                            <input asp-for="Ho_Ten" class="form-control shadow-sm" id="fullname"
                                   placeholder="Ví dụ: Nguyễn Văn A"
                                   title="Họ tên phải từ 2 đến 100 ký tự."
                                   required />
                            <span asp-validation-for="Ho_Ten" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Ten_Nguoi_Dung" class="form-label">Tên Đăng nhập</label>
                            <input asp-for="Ten_Nguoi_Dung" class="form-control shadow-sm" id="username"
                                   placeholder="Ví dụ: user123, john_doe"
                                   title="Tên đăng nhập chỉ chứa chữ cái, số, dấu chấm (.) hoặc dấu gạch dưới (_), không chứa dấu hoặc khoảng trắng."
                                   required />
                            <span asp-validation-for="Ten_Nguoi_Dung" class="text-danger small"></span>
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg w-100" id="submitButton" disabled>
                            <i class="bi bi-person-plus-fill me-2"></i>Đăng ký
                        </button>
                    </form>
                    <div class="text-center mt-3">
                        <p>Đã có tài khoản? <a href="@Url.Action("Login", "Account")" class="text-primary">Đăng nhập ngay</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function () {
            // Add custom validation method for username
            $.validator.addMethod("usernameFormat", function (value, element) {
                // Allow only alphanumeric, dots, and underscores; no spaces or diacritics
                return this.optional(element) || /^[a-zA-Z0-9_.]+$/.test(value) && !/\s/.test(value);
            }, "Tên đăng nhập chỉ được chứa chữ cái, số, dấu chấm (.) hoặc dấu gạch dưới (_), không chứa dấu hoặc khoảng trắng.");

            // Initialize form validation
            var form = $("#registerForm").validate({
                errorClass: "text-danger",
                highlight: function (element) {
                    $(element).addClass("is-invalid").removeClass("is-valid");
                },
                unhighlight: function (element) {
                    $(element).removeClass("is-invalid").addClass("is-valid");
                },
                errorPlacement: function (error, element) {
                    error.insertAfter(element);
                },
                rules: {
                    Email: {
                        required: true,
                        email: true,
                        maxlength: 100
                    },
                    Ho_Ten: {
                        required: true,
                        minlength: 2,
                        maxlength: 100
                    },
                    Ten_Nguoi_Dung: {
                        required: true,
                        usernameFormat: true,
                        minlength: 3,
                        maxlength: 50
                    }
                },
                messages: {
                    Email: {
                        required: "Email là bắt buộc.",
                        email: "Vui lòng nhập một địa chỉ email hợp lệ.",
                        maxlength: "Email không được vượt quá 100 ký tự."
                    },
                    Ho_Ten: {
                        required: "Họ tên là bắt buộc.",
                        minlength: "Họ tên phải từ 2 ký tự trở lên.",
                        maxlength: "Họ tên không được vượt quá 100 ký tự."
                    },
                    Ten_Nguoi_Dung: {
                        required: "Tên đăng nhập là bắt buộc.",
                        minlength: "Tên đăng nhập phải từ 3 ký tự trở lên.",
                        maxlength: "Tên đăng nhập không được vượt quá 50 ký tự."
                    }
                }
            });

            // Real-time validation to enable/disable submit button
            $("#registerForm input").on("input blur", function () {
                // Check if the form is valid
                if (form.valid()) {
                    $("#submitButton").prop("disabled", false);
                } else {
                    $("#submitButton").prop("disabled", true);
                }
            });

            // Trigger validation on form load to handle pre-filled values
            $("#registerForm").validate().form();
        });
    </script>
}

<style>
    body {
        background-color: #f8f9fa;
    }

    .card {
        border-radius: 8px;
        background-color: #ffffff;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1) !important;
        }

    .form-control {
        border-radius: 6px;
        border: 1px solid #ced4da;
        padding: 10px;
        font-size: 1rem;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.3);
            outline: none;
        }

        .form-control.is-invalid {
            border-color: #dc3545;
            box-shadow: 0 0 5px rgba(220, 53, 69, 0.3);
        }

        .form-control.is-valid {
            border-color: #28a745;
            box-shadow: 0 0 5px rgba(40, 167, 69, 0.3);
        }

    .btn-primary {
        border-radius: 6px;
        background-color: #007bff;
        border: none;
        padding: 12px;
        font-size: 1.1rem;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: scale(1.02);
        }

        .btn-primary:disabled {
            background-color: #6c757d;
            cursor: not-allowed;
        }

    .alert {
        border-radius: 6px;
        margin-bottom: 1.5rem;
        padding: 1.25rem;
    }

    .alert-success {
        background-color: #d4edda;
        border-color: #c3e6cb;
        color: #155724;
    }

    .alert-danger {
        background-color: #f8d7da;
        border-color: #f5c6cb;
        color: #721c24;
    }

    .text-primary {
        color: #007bff !important;
    }

    .form-label {
        font-weight: 500;
        color: #495057;
    }
</style>