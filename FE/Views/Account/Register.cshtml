                border-radius: 50%;
                background: rgba(255, 255, 255, 0.2);
                bottom: -30px;
                left: -30px;
            }

        .logo-section {
            text-align: center;
            margin-bottom: 40px;
            z-index: 1;
        }

        .logo {
            width: 80px;
            height: 80px;
            background: var(--primary-accent);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 15px;
            box-shadow: 0 5px 15px rgba(255, 77, 109, 0.3);
        }

            .logo i {
                font-size: 36px;
                color: white;
            }

        .brand-name {
            font-size: 32px;
            font-weight: 700;
            color: var(--text-dark);
            margin-bottom: 5px;
        }

        .brand-tagline {
            font-size: 16px;
            color: var(--text-light);
            font-weight: 400;
        }

        .benefits {
            list-style: none;
            margin-top: 30px;
            z-index: 1;
        }

            .benefits li {
                display: flex;
                align-items: center;
                margin-bottom: 20px;
                font-size: 16px;
                color: var(--text-dark);
            }

            .benefits i {
                width: 30px;
                height: 30px;
                background: var(--primary-accent);
                border-radius: 50%;
                display: flex;
                align-items: center;
                justify-content: center;
                color: white;
                margin-right: 15px;
                font-size: 14px;
            }

        .bubble {
            position: absolute;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.4);
            z-index: 0;
        }

        .bubble-1 {
            width: 80px;
            height: 80px;
            top: 20%;
            right: 10%;
        }

        .bubble-2 {
            width: 50px;
            height: 50px;
            bottom: 25%;
            left: 15%;
        }

        .register-right {
            flex: 1;
            padding: 50px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            background: var(--primary-white);
            overflow-y: auto;
            max-height: 984px;
        }

        .register-header {
            margin-bottom: 30px;
        }

        .register-title {
            font-size: 32px;
            font-weight: 700;
            color: var(--text-dark);
            margin-bottom: 10px;
        }

        .register-subtitle {
            font-size: 16px;
            color: var(--text-light);
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            font-weight: 500;
            margin-bottom: 8px;
            color: var(--text-dark);
            display: block;
        }

        .form-control {
            height: 50px;
            border-radius: 10px;
            border: 1px solid #e0e0e0;
            padding: 0 15px;
            font-size: 16px;
            transition: all 0.3s;
        }

            .form-control:focus {
                border-color: var(--primary-accent);
                box-shadow: 0 0 0 3px rgba(255, 77, 109, 0.1);
            }

        .password-container {
            position: relative;
        }

        .toggle-password {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: var(--text-light);
            cursor: pointer;
        }

        .password-strength {
            height: 4px;
            background: #e0e0e0;
            border-radius: 2px;
            margin-top: 5px;
            overflow: hidden;
        }

        .password-strength-bar {
            height: 100%;
            width: 0%;
            transition: width 0.3s, background 0.3s;
        }

        .password-weak .password-strength-bar {
            width: 33%;
            background: #ff4757;
        }

        .password-medium .password-strength-bar {
            width: 66%;
            background: #ffa502;
        }

        .password-strong .password-strength-bar {
            width: 100%;
            background: #2ed573;
        }

        .password-criteria {
            font-size: 12px;
            color: var(--text-light);
            margin-top: 5px;
        }

        .btn-register {
            background: var(--primary-accent);
            color: white;
            border: none;
            height: 50px;
            border-radius: 10px;
            font-size: 16px;
            font-weight: 600;
            transition: all 0.3s;
            width: 100%;
            margin-top: 10px;
        }

            .btn-register:hover {
                background: #ff2a4f;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(255, 77, 109, 0.3);
            }

        .login-link {
            text-align: center;
            font-size: 15px;
            color: var(--text-light);
            margin-top: 25px;
        }

            .login-link a {
                color: var(--primary-accent);
                font-weight: 600;
                text-decoration: none;
                transition: color 0.3s;
            }

                .login-link a:hover {
                    color: #ff2a4f;
                    text-decoration: underline;
                }

        .terms {
            font-size: 13px;
            color: var(--text-light);
            text-align: center;
            margin-top: 15px;
        }

            .terms a {
                color: var(--primary-accent);
                text-decoration: none;
            }

        .alert {
            border-radius: 10px;
            padding: 12px 15px;
            margin-bottom: 20px;
            border: none;
        }

        .alert-success {
            background: rgba(46, 213, 115, 0.1);
            color: #2ed573;
        }

        .alert-danger {
            background: rgba(255, 71, 87, 0.1);
            color: #ff4757;
        }

        .text-danger {
            color: #ff4757;
            font-size: 14px;
            margin-top: 5px;
            display: block;
        }

        media (max-width: 992px) {
            .register-container

        {
            flex-direction: column;
            max-width: 500px;
        }

        .register-left, .register-right {
            padding: 40px 30px;
        }

        .register-right {
            max-height: none;
        }

        }

        media (max-width: 576px) {
            body

        {
            padding: 10px;
        }

        .register-left, .register-right {
            padding: 30px 20px;
        }

        }
    </style>
</head>
<body>
    <div class="register-container">
        <!-- Left Side: Branding & Benefits -->
        <div class="register-left">
            <div class="bubble bubble-1"></div>
            <div class="bubble bubble-2"></div>

            <div class="logo-section">
                <div class="logo">
                    <i class="fas fa-coffee"></i>
                </div>
                <h1 class="brand-name">The Boy</h1>
                <p class="brand-tagline">Thế giới trà sữa thu nhỏ</p>
            </div>

            <ul class="benefits">
                <li>
                    <i class="fas fa-gift"></i>
                    <span>Hơn 50 loại trà sữa độc đáo</span>
                </li>
                <li>
                    <i class="fas fa-star"></i>
                    <span>Nguyên liệu tự nhiên, an toàn</span>
                </li>
                <li>
                    <i class="fas fa-bolt"></i>
                    <span>Đặt hàng nhanh chóng, dễ dàng</span>
                </li>
                <li>
                    <i class="fas fa-bell"></i>
                    <span>Giao hàng nhanh</span>
                </li>
            </ul>
        </div>



        <!-- Right Side: Register Form -->
        <div class="register-right">
            <div class="register-header">
                <h2 class="register-title">Đăng Ký Tài Khoản</h2>

            </div>

            <!-- Notifications -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">
                    <i class="fas fa-check-circle me-2"></i>
                    <strong>Thành công!</strong> @TempData["Success"]
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    <strong>Lỗi!</strong> @TempData["Error"]
                </div>
            }

            <form asp-action="Register" method="post" id="registerForm">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="form-group">
                    <label class="form-label" for="Email">Email</label>
                    <input asp-for="Email" class="form-control" id="Email"
                           placeholder="example@email.com"
                           required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="form-label" for="Ho_Ten">Họ và tên</label>
                    <input asp-for="Ho_Ten" class="form-control" id="Ho_Ten"
                           placeholder="Nguyễn Văn A"
                           required />
                    <span asp-validation-for="Ho_Ten" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="form-label" for="Ten_Nguoi_Dung">Tên đăng nhập</label>
                    <input asp-for="Ten_Nguoi_Dung" class="form-control" id="Ten_Nguoi_Dung"
                           placeholder="Tên đăng nhập (chỉ chứa chữ cái, số, dấu chấm hoặc gạch dưới)"
                           required />
                    <span asp-validation-for="Ten_Nguoi_Dung" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="form-label" for="Mat_Khau">Mật khẩu</label>
                    <div class="password-container">
                        <input asp-for="Mat_Khau" type="password" class="form-control" id="Mat_Khau"
                               placeholder="Mật khẩu (tối thiểu 6 ký tự)"
                               required />
                        <button type="button" class="toggle-password" id="togglePassword">
                            <i class="far fa-eye"></i>
                        </button>
                    </div>
                    <div class="password-strength">
                        <div class="password-strength-bar"></div>
                    </div>
                    <div class="password-criteria" id="passwordCriteria">
                        Mật khẩu phải có ít nhất 6 ký tự
                    </div>
                    <span asp-validation-for="Mat_Khau" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="form-label" for="ConfirmPassword">Xác nhận mật khẩu</label>
                    <div class="password-container">
                        <input asp-for="ConfirmPassword" type="password" class="form-control" id="ConfirmPassword"
                               placeholder="Nhập lại mật khẩu"
                               required />
                        <button type="button" class="toggle-password" id="toggleConfirmPassword">
                            <i class="far fa-eye"></i>
                        </button>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn-register">Đăng Ký</button>
            </form>

            <div class="terms">
                Bằng việc đăng ký, bạn đã đồng ý với <a href="#">Điều khoản dịch vụ</a> và <a href="#">Chính sách bảo mật</a> của chúng tôi
            </div>

            <div class="login-link">
                Đã có tài khoản? <a href="@Url.Action("Login", "Account")">Đăng nhập ngay</a>
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <script>
        // Toggle password visibility
        document.getElementById('togglePassword').addEventListener('click', function() {
            const passwordInput = document.getElementById('Mat_Khau');
            const icon = this.querySelector('i');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        });

        document.getElementById('toggleConfirmPassword').addEventListener('click', function() {
            const passwordInput = document.getElementById('ConfirmPassword');
            const icon = this.querySelector('i');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        });

        // Password strength indicator
        document.getElementById('Mat_Khau').addEventListener('input', function() {
            const password = this.value;
            const strengthBar = document.querySelector('.password-strength-bar');
            const criteria = document.getElementById('passwordCriteria');
            const container = document.querySelector('.password-strength').parentElement;

            // Remove all strength classes
            container.classList.remove('password-weak', 'password-medium', 'password-strong');

            if (password.length === 0) {
                strengthBar.style.width = '0%';
                criteria.textContent = 'Mật khẩu phải có ít nhất 6 ký tự';
                return;
            }

            if (password.length < 6) {
                container.classList.add('password-weak');
                criteria.textContent = 'Mật khẩu quá ngắn';
                return;
            }

            // Check password strength
            let strength = 0;

            // Length check
            if (password.length >= 8) strength++;
            if (password.length >= 12) strength++;

            // Character variety check
            if (/[a-z]/.test(password)) strength++;
            if (/[A-Z]/.test(password)) strength++;
            if (/[0-9]/.test(password)) strength++;
            if (/[^a-zA-Z0-9]/.test(password)) strength++;

            // Update UI based on strength
            if (strength <= 3) {
                container.classList.add('password-weak');
                criteria.textContent = 'Mật khẩu yếu';
            } else if (strength <= 5) {
                container.classList.add('password-medium');
                criteria.textContent = 'Mật khẩu trung bình';
            } else {
                container.classList.add('password-strong');
                criteria.textContent = 'Mật khẩu mạnh';
            }
        });

        // Form validation
        document.getElementById('registerForm').addEventListener('submit', function(e) {
            const password = document.getElementById('Mat_Khau').value;
            const confirmPassword = document.getElementById('ConfirmPassword').value;

            if (password !== confirmPassword) {
                e.preventDefault();
                alert('Mật khẩu xác nhận không khớp. Vui lòng kiểm tra lại.');
                return;
            }

            if (password.length < 6) {
                e.preventDefault();
                alert('Mật khẩu phải có ít nhất 6 ký tự.');
                return;
            }
        });
    </script>
</body>
</html>