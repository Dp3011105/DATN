@model FE.Models.VoucherViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Thông tin Voucher";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">Chi tiết Voucher</h3>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.ID_Voucher" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Chỉnh sửa
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>

                <div class="card-body">
                    <div class="row justify-content-center">
                        <div class="col-md-8">
                            <div class="text-center mb-4">
                                <span class="@Model.TrangThaiClass fs-5">
                                    <i class="fas @(Model.IsExpired ? "fa-clock" : Model.Trang_Thai == true ? "fa-check-circle" : "fa-times-circle")"></i>
                                    @Model.TrangThaiText
                                </span>
                            </div>

                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Mã Voucher:</label>
                                        <p class="form-control-plaintext border p-2 bg-light rounded">
                                            <strong>@Model.Ma_Voucher</strong>
                                        </p>
                                    </div>
                                </div>

                                <div class="col-sm-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Tên Voucher:</label>
                                        <p class="form-control-plaintext border p-2 bg-light rounded">
                                            @(Model.Ten ?? "N/A")
                                        </p>
                                    </div>
                                </div>

                                <div class="col-sm-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Số Lượng:</label>
                                        <p class="form-control-plaintext border p-2 bg-light rounded">
                                            @(Model.So_Luong?.ToString("N0") ?? "N/A")
                                        </p>
                                    </div>
                                </div>

                                <!-- SỬA: Từ Giá trị giảm → Phần trăm giảm -->
                                <div class="col-sm-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Phần Trăm Giảm:</label>
                                        <p class="form-control-plaintext border p-2 bg-light rounded text-success fw-bold">
                                            @Model.GiaTriGiamText
                                        </p>
                                    </div>
                                </div>

                                <!-- SỬA: Từ Yêu cầu tối thiểu → label cập nhật -->
                                <div class="col-sm-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Yêu Cầu Tối Thiểu:</label>
                                        <p class="form-control-plaintext border p-2 bg-light rounded">
                                            @Model.SoTienDatYeuCauText
                                        </p>
                                    </div>
                                </div>

                                <div class="col-sm-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">ID Voucher:</label>
                                        <p class="form-control-plaintext border p-2 bg-light rounded">
                                            @Model.ID_Voucher
                                        </p>
                                    </div>
                                </div>

                                <div class="col-sm-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Ngày Bắt Đầu:</label>
                                        <p class="form-control-plaintext border p-2 bg-light rounded">
                                            @if (Model.Ngay_Bat_Dau.HasValue)
                                            {
                                                <span>@Model.Ngay_Bat_Dau.Value.ToString("dd/MM/yyyy HH:mm")</span>
                                            }
                                            else
                                            {
                                                <span>N/A</span>
                                            }
                                        </p>
                                    </div>
                                </div>

                                <div class="col-sm-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Ngày Kết Thúc:</label>
                                        <p class="form-control-plaintext border p-2 bg-light rounded">
                                            @if (Model.Ngay_Ket_Thuc.HasValue)
                                            {
                                                <span>@Model.Ngay_Ket_Thuc.Value.ToString("dd/MM/yyyy HH:mm")</span>

                                                @if (Model.IsExpired)
                                                {
                                                    <small class="text-danger d-block">
                                                        <i class="fas fa-exclamation-triangle"></i> Đã hết hạn
                                                    </small>
                                                }
                                                else
                                                {
                                                    <small class="text-success d-block">
                                                        <i class="fas fa-check"></i> Còn hiệu lực
                                                    </small>
                                                }
                                            }
                                            else
                                            {
                                                <span>N/A</span>
                                            }
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <!-- THÊM: Thông tin tính toán giảm giá -->
                            @if (Model.Gia_Tri_Giam.HasValue && Model.Gia_Tri_Giam.Value > 0)
                            {
                                <div class="alert alert-info mt-4">
                                    <h6><i class="fas fa-calculator me-2"></i>Ví dụ tính giảm giá</h6>
                                    @{
                                        var minAmount = Model.So_Tien_Dat_Yeu_Cau ?? 0;
                                        var exampleAmounts = new decimal[] { 100000, 500000, 1000000, 2000000 };
                                    }
                                    @foreach (var amount in exampleAmounts.Where(a => a >= minAmount).Take(2))
                                    {
                                        var discountAmount = (amount * Model.Gia_Tri_Giam.Value) / 100;
                                        var finalAmount = amount - discountAmount;
                                        <p class="mb-1">
                                            <strong>@amount.ToString("N0") VNĐ</strong>
                                            → Giảm <span class="text-success">@discountAmount.ToString("N0") VNĐ</span>
                                            → Còn <strong>@finalAmount.ToString("N0") VNĐ</strong>
                                        </p>
                                    }
                                </div>
                            }

                            @if (Model.Trang_Thai == true && !Model.IsExpired)
                            {
                                <div class="mt-4 text-center">
                                    <button type="button" class="btn btn-danger"
                                            onclick="deactivateVoucher(@Model.ID_Voucher, '@Model.Ma_Voucher')">
                                        <i class="fas fa-stop"></i> Ngừng hoạt động
                                    </button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal xác nhận ngừng hoạt động -->
<div class="modal fade" id="deactivateModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xác nhận ngừng hoạt động</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn ngừng hoạt động voucher <strong id="voucherCode"></strong>?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <form id="deactivateForm" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger">Ngừng hoạt động</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function deactivateVoucher(id, code) {
        document.getElementById('voucherCode').textContent = code;
        document.getElementById('deactivateForm').action = '/Voucher/Deactivate/' + id;

        var modal = new bootstrap.Modal(document.getElementById('deactivateModal'));
        modal.show();
    }
</script>