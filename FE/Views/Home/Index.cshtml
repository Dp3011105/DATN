            }

            .add-to-cart-btn:disabled {
                background: #D1D5DB;
                cursor: not-allowed;
            }

        /* Alerts */
        .alert-notification {
            padding: 0.75rem 1rem;
            border-radius: 8px;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.9rem;
        }

        .alert-success {
            background: #ECFDF5;
