        .option-badge {
            display: inline-block;
            padding: 0.5rem 1rem;
            border: 1px solid #E5E7EB;
            border-radius: 20px;
            font-size: 0.8rem;
            cursor: pointer;
            transition: all 0.2s ease;
        }

            .option-badge:hover {
                background: var(--primary);
