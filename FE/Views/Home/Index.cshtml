@model List<SanPham>

<h2 class="text-center">Menu Trà Sữa</h2>

<div class="row">
    @foreach (var product in Model.Where(p => p.Trang_Thai)) // Chỉ lấy sản phẩm đang hoạt động
    {
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow-sm">
                <img src="@("https://localhost:7169" + product.Hinh_Anh)"
                     class="card-img-top"
                     alt="@product.Ten_San_Pham"
                     style="height: 200px; object-fit: cover;" />
                <div class="card-body text-center">
                    <h5 class="card-title">@product.Ten_San_Pham</h5>
                    <p class="text-danger fw-bold">@string.Format("{0:N0} đ", product.Gia)</p>
                    <p class="text-muted" style="min-height: 40px;">@product.Mo_Ta</p>
                    <a asp-controller="ProductDetails" asp-action="Index" asp-route-id="@product.ID_San_Pham" class="btn btn-outline-primary btn-sm">Xem chi tiết</a>
                    <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@product.ID_San_Pham" class="btn btn-primary btn-sm">Mua ngay</a>
                </div>
            </div>
        </div>
    }
</div>
