@model BE.models.HoaDon
@{
    ViewData["Title"] = "Cập nhật trạng thái hóa đơn";
}

<h2 class="mb-4">Chi tiết hóa đơn - Cập nhật trạng thái</h2>

<div class="card p-4">
    <div class="row mb-3">
        <div class="col-md-6">
            <strong>Mã hóa đơn:</strong> @Model.Ma_Hoa_Don
        </div>
        <div class="col-md-6">
            <strong>Ngày tạo:</strong> @Model.Ngay_Tao.ToString("dd/MM/yyyy HH:mm")
        </div>
    </div>

    @*  <div class="row mb-3">
    <div class="col-md-6">
    <strong>Khách hàng:</strong> @Model.KhachHang?.Ten_Khach_Hang
    </div>
    <div class="col-md-6">
    <strong>Nhân viên xử lý:</strong> @Model.NhanVien?.Ten_Nhan_Vien
    </div>
    </div>

    <div class="row mb-3">
    <div class="col-md-6">
    <strong>Địa chỉ:</strong> @(Model.DiaChi?.Dia_Chi_Cu_The ?? Model.Dia_Chi_Tu_Nhap)
    </div>
    <div class="col-md-6">
    <strong>Phí ship:</strong> @(Model.Phi_Ship?.ToString("N0") ?? "0") đ
    </div>
    </div> *@

    <div class="row mb-3">
        <div class="col-md-6">
            <strong>Tổng tiền:</strong> @Model.Tong_Tien.ToString("N0") đ
        </div>
        <div class="col-md-6">
            <strong>Loại hóa đơn:</strong> @Model.Loai_Hoa_Don
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-12">
            <strong>Ghi chú:</strong> @Model.Ghi_Chu
        </div>
    </div>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="ID_Hoa_Don" />

        <div class="form-group mb-3">
            <label asp-for="Trang_Thai" class="form-label">Trạng thái đơn hàng</label>
            <select asp-for="Trang_Thai" class="form-control">
                <option value="Chua_Xac_Nhan">Chưa xác nhận</option>
                <option value="Da_Xac_Nhan">Đã xác nhận</option>
                <option value="Dang_Giao_Hang">Đang giao hàng</option>
                <option value="Hoan_Thanh">Hoàn thành</option>
                <option value="Do_Hang_Co_Van_De">Đơn hàng có vấn đề</option>
                <option value="Huy_Don">Hủy đơn</option>
            </select>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-success me-2">
                <i class="fas fa-save"></i> Lưu trạng thái
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </form>
</div>