@model BE.models.VaiTro
@{
    ViewData["Title"] = "Thêm vai trò";
    Layout = "_AdminLayout";
}

<div class="card shadow border-0">
    <div class="card-header bg-success text-white">
        <h4 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Thêm vai trò mới</h4>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="Ten_Vai_Tro" class="form-label"></label>
                <input asp-for="Ten_Vai_Tro" class="form-control" placeholder="Nhập tên vai trò..." />
                <span asp-validation-for="Ten_Vai_Tro" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-end">
                <a asp-action="Index" class="btn btn-secondary me-2"><i class="fas fa-arrow-left"></i> Quay lại</a>
                <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Lưu</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
