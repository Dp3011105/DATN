@model BE.models.NhanVien

<div class="p-3">
    <div class="text-center mb-3">
        <h4 class="fw-bold">Thông tin chi tiết nhân viên</h4>
        <hr class="mb-2" />
    </div>
    <div class="row">
        <div class="col-md-4 text-center mb-3">
            @if (!string.IsNullOrEmpty(Model.AnhNhanVien))
            {
                <img src="@Model.AnhNhanVien" alt="Ảnh nhân viên" style="width:150px; height:150px; border-radius:50%; object-fit:cover; border:3px solid #3b82f6;" />
            }
            else
            {
                <div style="width:150px; height:150px; border-radius:50%; background-color:#e5e7eb; display:flex; align-items:center; justify-content:center; border:3px solid #3b82f6;">
                    <i class="fas fa-user fa-3x text-muted"></i>
                </div>
            }
            <div class="mt-2">
                <span class="badge bg-@(Model.Trang_Thai == true ? "success" : "secondary")">
                    @(Model.Trang_Thai == true ? "Đang làm" : "Nghỉ")
                </span>
            </div>
        </div>
        <div class="col-md-8">
            <div class="mb-2">
                <strong>Họ tên:</strong> <span class="text-primary">@Model.Ho_Ten</span>
            </div>
            <div class="mb-2">
                <strong>Email:</strong> @Model.Email
            </div>
            <div class="mb-2">
                <strong>Số điện thoại:</strong> @Model.So_Dien_Thoai
            </div>
            <div class="mb-2">
                <strong>Giới tính:</strong> @(Model.GioiTinh == true ? "Nam" : Model.GioiTinh == false ? "Nữ" : "Khác")
            </div>
            <div class="mb-2">
                <strong>Năm sinh:</strong> @Model.NamSinh
            </div>
        </div>
    </div>
    <div class="text-center mt-3">
        <button class="btn btn-secondary" onclick="document.getElementById('detailModal').style.display='none'">
            <i class="fas fa-times me-1"></i> Đóng
        </button>
    </div>
</div>
