@model BE.models.NhanVien
@{
    ViewData["Title"] = "Chỉnh sửa nhân viên";
    Layout = (ViewBag.IsAjaxRequest == true) ? null : "_AdminLayout";
}

<style>
    .edit-container {
        max-width: 1000px;
        margin: 30px auto;
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 8px 24px rgba(0,0,0,0.12);
        overflow: hidden;
        animation: fadeInUp 0.5s ease;
    }

    .edit-header {
        background: linear-gradient(135deg, #1d3557, #457b9d);
        color: #fff;
        padding: 1.5rem;
        text-align: center;
    }

        .edit-header h2 {
            margin: 0;
            font-weight: 600;
            font-size: 1.5rem;
        }

    .edit-body {
        padding: 1.5rem;
    }

    .form-label {
        font-weight: 500;
        margin-bottom: 0.3rem;
        color: #1d3557;
    }

    .form-control, .form-select {
        border-radius: 8px;
        padding: 0.6rem 0.75rem;
        border: 1px solid #ced4da;
        transition: all 0.2s ease;
    }

        .form-control:focus, .form-select:focus {
            border-color: #457b9d;
            box-shadow: 0 0 0 0.2rem rgba(69, 123, 157, 0.25);
        }

    .btn {
        padding: 0.6rem 1.2rem;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.2s ease;
    }

    .btn-primary {
        background: linear-gradient(45deg, #457b9d, #1d3557);
        border: none;
        color: #fff;
    }

        .btn-primary:hover {
            background: linear-gradient(45deg, #1d3557, #457b9d);
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.15);
        }

    .btn-secondary {
        background: #adb5bd;
        border: none;
        color: #fff;
    }

        .btn-secondary:hover {
            background: #868e96;
            transform: translateY(-2px);
        }

    .img-preview {
        margin-top: 10px;
        max-width: 120px;
        border-radius: 8px;
        border: 2px solid #e9ecef;
    }

    keyframes fadeInUp {
        from

    {
        transform: translateY(20px);
        opacity: 0;
    }

    to {
        transform: translateY(0);
        opacity: 1;
    }

    }
</style>

<div class="edit-container">
    <div class="edit-header">
        <h2><i class="fas fa-user-edit"></i> Cập nhật thông tin nhân viên</h2>
    </div>
    <div class="edit-body">
        <form asp-action="Edit" asp-controller="NhanVien" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="ID_Nhan_Vien" />

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Ho_Ten" class="form-label">Họ tên</label>
                    <input asp-for="Ho_Ten" class="form-control" />
                    <span asp-validation-for="Ho_Ten" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="So_Dien_Thoai" class="form-label">SĐT</label>
                    <input asp-for="So_Dien_Thoai" class="form-control" />
                    <span asp-validation-for="So_Dien_Thoai" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="GioiTinh" class="form-label">Giới tính</label>
                    <select asp-for="GioiTinh" class="form-select">
                        <option value="">-- Chọn --</option>
                        <option value="true">Nam</option>
                        <option value="false">Nữ</option>
                    </select>
                </div>

                <div class="col-md-6">
                    <label asp-for="NamSinh" class="form-label">Năm sinh</label>
                    <input asp-for="NamSinh" type="date" class="form-control" />
                </div>

                <div class="col-md-6">
                    <label asp-for="CCCD" class="form-label">CCCD</label>
                    <input asp-for="CCCD" class="form-control" />
                </div>

                <div class="col-md-12">
                    <label asp-for="Dia_Chi" class="form-label">Địa chỉ</label>
                    <input asp-for="Dia_Chi" class="form-control" />
                </div>

                <div class="col-md-6">
                    <label asp-for="Trang_Thai" class="form-label">Trạng thái</label>
                    <select asp-for="Trang_Thai" class="form-select">
                        <option value="true">Đang làm</option>
                        <option value="false">Nghỉ</option>
                    </select>
                </div>

                <div class="col-md-6">
                    <label asp-for="Ghi_Chu" class="form-label">Ghi chú</label>
                    <textarea asp-for="Ghi_Chu" rows="1" class="form-control"></textarea>
                </div>

                <div class="col-md-6">
                    <label class="form-label">Ảnh nhân viên</label>
                    <input type="file" name="anhNhanVien" class="form-control" />
                    @if (!string.IsNullOrEmpty(Model.AnhNhanVien))
                    {
                        <img src="@Model.AnhNhanVien" class="img-preview" alt="Ảnh hiện tại" />
                    }
                </div>
            </div>

            <div class="mt-4 d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Quay lại</a>
                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Lưu thay đổi</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
