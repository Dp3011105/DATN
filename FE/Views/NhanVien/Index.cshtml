            else if (type === 'working') window.location.href = `${url}?searchTerm=${encodeURIComponent(search)}&statusFilter=true&page=1`;
            else if (type === 'leaving') window.location.href = `${url}?searchTerm=${encodeURIComponent(search)}&statusFilter=false&page=1`;
        }

