@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            const modal = document.getElementById('detailModal');
            const closeBtn = document.querySelector('.modal-content-custom .close');
            const triggers = document.querySelectorAll('.detail-trigger');
            const checkboxes = document.querySelectorAll('.employee-checkbox');
            const searchInput = $('#searchTerm');
            const centeredAlert = $('#centeredAlert');

            // Hiển thị thông báo trung tâm
            function showAlert(message, isSuccess) {
                centeredAlert.removeClass('success error').addClass(isSuccess ? 'success' : 'error')
                    .html(message + '<button type="button" class="btn-close" aria-label="Close"></button>')
                    .css('display', 'block');
                setTimeout(() => {
                    centeredAlert.addClass('fade-out');
                    setTimeout(() => centeredAlert.css('display', 'none').removeClass('fade-out'), 300);
                }, 5000); // Ẩn sau 5s
            }

            // Kiểm tra TempData và hiển thị thông báo
            @if (TempData["Success"] != null)
            {
                    @:showAlert("@TempData["Success"].ToString().Replace("\"", "\\\"")", true);
            }
            @if (TempData["Error"] != null)
            {
                    @:showAlert("@Html.Raw(TempData["Error"].ToString().Replace("\"", "\\\""))", false);
            }

            // Xử lý đóng thông báo khi click nút close
            centeredAlert.on('click', '.btn-close', function () {
                centeredAlert.addClass('fade-out');
                setTimeout(() => centeredAlert.css('display', 'none').removeClass('fade-out'), 300);
            });

            // Chi tiết NV
            triggers.forEach(tr => {
                tr.addEventListener('click', function (e) {
                    if (e.target.closest("a,button,input")) return;
                    const id = this.getAttribute('data-id');
                    document.getElementById('modalBody').innerHTML = "Đang tải...";
                    fetch(`/NhanVien/Details/${id}`)
                        .then(r => r.text())
                        .then(data => {
                            document.getElementById('modalBody').innerHTML = data;
                            modal.style.display = 'block';
                        });
                });
            });
            closeBtn.addEventListener('click', () => modal.style.display = 'none');
            window.addEventListener('click', e => { if (e.target == modal) modal.style.display = 'none'; });

            // Chọn tất cả
            document.getElementById('selectAllBtn').addEventListener('click', () => {
                checkboxes.forEach(c => c.checked = !c.checked);
            });

            // Xóa nhiều
            document.getElementById('deleteSelectedBtn').addEventListener('click', () => {
                const ids = Array.from(checkboxes).filter(c => c.checked).map(c => c.dataset.id);
                if (ids.length === 0) {
                    alert("Vui lòng chọn ít nhất một nhân viên để xóa.");
                    return;
                }
                if (confirm("Xóa các nhân viên đã chọn?")) {
                    fetch('/NhanVien/DeleteSelected', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(ids)
                    }).then(r => r.json()).then(data => {
                        if (data.success) {
                            location.reload();
                        } else {
                            alert("Có lỗi xảy ra: " + data.message);
                        }
                    });
                }
            });

            // Tìm kiếm khi nhấn Enter
            searchInput.on('keyup', function (e) {
                if (e.key === 'Enter') {
                    performSearch();
                }
            });
        });

        function performSearch() {
            const searchTerm = $('#searchTerm').val().trim();
            const statusFilter = $('#statusFilterInput').val() || '';
            const pageSize = $('#pageSizeSelect').length ? $('#pageSizeSelect').val() : $('#pageSizeHidden').val() || '@pageSize';
            // cập nhật hidden pageSize để khi submit form (nếu dùng) vẫn giữ giá trị
            $('#pageSizeHidden').val(pageSize);
            window.location.href = `@Url.Action("Index", "NhanVien")?searchTerm=${encodeURIComponent(searchTerm)}&statusFilter=${statusFilter}&page=1&pageSize=${pageSize}`;
        }

        function filterStatus(type) {
            let url = '@Url.Action("Index", "NhanVien")';
            let search = document.getElementById('searchTerm').value || "";
            const pageSize = document.getElementById('pageSizeSelect') ? document.getElementById('pageSizeSelect').value : '@pageSize';
            if (type === 'all') window.location.href = `${url}?searchTerm=${encodeURIComponent(search)}&statusFilter=&page=1&pageSize=${pageSize}`;
            else if (type === 'working') window.location.href = `${url}?searchTerm=${encodeURIComponent(search)}&statusFilter=true&page=1&pageSize=${pageSize}`;
            else if (type === 'leaving') window.location.href = `${url}?searchTerm=${encodeURIComponent(search)}&statusFilter=false&page=1&pageSize=${pageSize}`;
        }

        function goToCreate() {
            window.location.href = '@Url.Action("Create", "NhanVien")';
        }

        function onPageSizeChange() {
            const pageSize = document.getElementById('pageSizeSelect').value;
            // cập nhật hidden để submit form tìm kiếm vẫn giữ pageSize nếu người dùng submit
            const pageSizeHidden = document.getElementById('pageSizeHidden');
            if (pageSizeHidden) pageSizeHidden.value = pageSize;

            const searchTerm = encodeURIComponent(document.getElementById('searchTerm').value || '');
            const statusFilter = encodeURIComponent(document.getElementById('statusFilterInput').value || '');
            const url = `@Url.Action("Index", "NhanVien")?searchTerm=${searchTerm}&statusFilter=${statusFilter}&page=1&pageSize=${pageSize}`;
            window.location.href = url;
        }
    </script>
}

