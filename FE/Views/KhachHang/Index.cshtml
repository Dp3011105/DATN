
@model IEnumerable<BE.DTOs.KhachHangDTO>
@{
    ViewData["Title"] = "Danh sách khách hàng";
    Layout = "_AdminLayout";
}

<div class="container-fluid p-4">
    <div class="card">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4>Danh sách khách hàng</h4>
            <a href="@Url.Action("Create")" class="btn btn-success btn-sm">
                <i class="fas fa-plus"></i> Thêm khách hàng
            </a>
        </div>
        <div class="card-body">
            <ul class="nav nav-tabs mb-3" id="customerTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="all-tab" data-bs-toggle="tab" data-bs-target="#all" type="button" role="tab" aria-controls="all" aria-selected="true">Tất cả</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="active-tab" data-bs-toggle="tab" data-bs-target="#active" type="button" role="tab" aria-controls="active" aria-selected="false">Đang hoạt động</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="inactive-tab" data-bs-toggle="tab" data-bs-target="#inactive" type="button" role="tab" aria-controls="inactive" aria-selected="false">Không hoạt động</button>
                </li>
            </ul>
            <div class="tab-content" id="customerTabContent">
                <div class="tab-pane fade show active" id="all" role="tabpanel" aria-labelledby="all-tab">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Mã khách hàng</th>
                                    <th>Họ tên</th>
                                    <th>SĐT</th>
                                    <th>Email</th>
                                    <th>Trạng thái</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Any())
                                {
                                    @foreach (var kh in Model)
                                    {
                                        <tr>
                                            <td>@kh.ID_Khach_Hang</td>
                                            <td>@kh.Ho_Ten</td>
                                            <td>@kh.So_Dien_Thoai</td>
                                            <td>@kh.Email</td>
                                            <td>
                                                <span class="badge bg-@(kh.Trang_Thai ? "success" : "secondary")">
                                                    @(kh.Trang_Thai ? "Đang hoạt động" : "Không hoạt động")
                                                </span>
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Edit", new { id = kh.ID_Khach_Hang })" class="btn btn-warning btn-sm me-1">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <form asp-action="Delete" asp-route-id="@kh.ID_Khach_Hang" method="post" style="display:inline" onsubmit="return confirm('Bạn có chắc muốn xóa?');">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-danger btn-sm">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center">Không có dữ liệu</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="tab-pane fade" id="active" role="tabpanel" aria-labelledby="active-tab">
                    @foreach (var kh in Model.Where(k => k.Trang_Thai))
                    {
                        <div class="d-flex align-items-center border-bottom py-2">
                            <div class="flex-grow-1">
                                <strong>@kh.Ho_Ten</strong> (@kh.So_Dien_Thoai)
                            </div>
                            <div>
                                <a href="@Url.Action("Edit", new { id = kh.ID_Khach_Hang })" class="btn btn-warning btn-sm me-1">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form asp-action="Delete" asp-route-id="@kh.ID_Khach_Hang" method="post" style="display:inline" onsubmit="return confirm('Bạn có chắc muốn xóa?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    }
                    @if (!Model.Any(k => k.Trang_Thai))
                    {
                        <p class="text-center">Không có khách hàng đang hoạt động</p>
                    }
                </div>
                <div class="tab-pane fade" id="inactive" role="tabpanel" aria-labelledby="inactive-tab">
                    @foreach (var kh in Model.Where(k => !k.Trang_Thai))
                    {
                        <div class="d-flex align-items-center border-bottom py-2">
                            <div class="flex-grow-1">
                                <strong>@kh.Ho_Ten</strong> (@kh.So_Dien_Thoai)
                            </div>
                            <div>
                                <a href="@Url.Action("Edit", new { id = kh.ID_Khach_Hang })" class="btn btn-warning btn-sm me-1">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form asp-action="Delete" asp-route-id="@kh.ID_Khach_Hang" method="post" style="display:inline" onsubmit="return confirm('Bạn có chắc muốn xóa?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    }
                    @if (!Model.Any(k => !k.Trang_Thai))
                    {
                        <p class="text-center">Không có khách hàng không hoạt động</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const triggerTabList = document.querySelectorAll('#customerTabs button');
            triggerTabList.forEach(triggerEl => {
                const tabTrigger = new bootstrap.Tab(triggerEl);
                triggerEl.addEventListener('click', event => {
                    event.preventDefault();
                    tabTrigger.show();
                });
            });
        });
    </script>
}