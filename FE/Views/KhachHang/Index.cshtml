@model IEnumerable<BE.DTOs.KhachHangDTO>

@{
    ViewData["Title"] = "Danh sách khách hàng";
    Layout = "_AdminLayout";

    var currentPage = ViewBag.CurrentPage as int? ?? 1;
    var pageSize = ViewBag.PageSize as int? ?? 10;
    var totalPages = ViewBag.TotalPages as int? ?? 1;
    var searchTerm = ViewBag.SearchTerm as string ?? "";
    var statusFilter = ViewBag.StatusFilter as bool?;
    var totalFilteredItems = ViewBag.TotalFilteredItems as int? ?? 0;
}

<style>
    /* Container chính */
    .employee-container {
        background: linear-gradient(135deg, #f8fafc, #e2e8f0);
        border-radius: 18px;
        padding: 25px;
        box-shadow: 0 12px 35px rgba(0, 0, 0, 0.1);
        margin-bottom: 25px;
    }

    /* Thống kê khách hàng */
    .stats-container {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 18px;
        margin-bottom: 25px;
    }

    .stat-card {
        padding: 25px 15px;
        border-radius: 18px;
        text-align: center;
        font-weight: 600;
        font-size: 1rem;
        color: #fff;
        cursor: pointer;
        position: relative;
        overflow: hidden;
        transition: all 0.4s ease;
    }

        .stat-card i {
            font-size: 1.8rem;
            margin-bottom: 10px;
            opacity: 0.9;
        }

        .stat-card strong {
            display: block;
            font-size: 1.5rem;
            margin-top: 5px;
        }

        .stat-card:hover {
            transform: translateY(-6px) scale(1.05);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
        }

    .stat-total {
        background: linear-gradient(135deg, #2563eb, #3b82f6);
    }

    .stat-active {
        background: linear-gradient(135deg, #059669, #10b981);
    }

    .stat-inactive {
        background: linear-gradient(135deg, #dc2626, #ef4444);
    }

    /* Thanh tìm kiếm */
    .search-filter {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
        background: #fff;
        padding: 15px;
        border-radius: 12px;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.05);
        margin-bottom: 20px;
    }

        .search-filter input, .search-filter select {
            border-radius: 8px;
            box-shadow: inset 0 2px 5px rgba(0, 0, 0, 0.08);
        }

    /* Bảng */
    .table-custom {
        border-radius: 12px;
        overflow: hidden;
        background: #fff;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
    }

        .table-custom thead {
            background: linear-gradient(135deg, #1e40af, #3b82f6);
            color: #fff;
        }

        .table-custom tbody tr {
            transition: all 0.3s ease;
        }

            .table-custom tbody tr:hover {
                background: rgba(59, 130, 246, 0.08);
                transform: translateX(5px);
            }

    /* Nút bấm */
    .btn-sm {
        border-radius: 25px;
        font-weight: 500;
        padding: 0.35rem 0.9rem;
        transition: all 0.3s ease;
    }

        .btn-sm:hover {
            transform: translateY(-3px) scale(1.05);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
        }

    /* Badge trạng thái */
    .badge {
        padding: 0.4em 0.7em;
        border-radius: 10px;
        font-size: 0.85rem;
        font-weight: 600;
    }

    /* Modal Chi tiết */
    #detailModal .modal-content {
        border-radius: 15px;
        border: none;
        background: linear-gradient(135deg, #f9fffb, #e6f3e6);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
    }

    #detailModal .modal-header {
        background: linear-gradient(135deg, #2ecc71, #27ae60);
        color: white;
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
        padding: 15px;
    }

    #detailModal .modal-title {
        font-size: 1.25rem;
        font-weight: 600;
    }

    #detailModal .modal-body {
        padding: 20px;
        color: #34495e;
        font-size: 1rem;
    }

        #detailModal .modal-body dl dt {
            font-weight: 500;
            color: #27ae60;
            margin-bottom: 8px;
        }

        #detailModal .modal-body dl dd {
            margin-bottom: 12px;
            font-weight: 400;
            color: #2c3e50;
        }

    #detailModal .btn-close {
        background: none;
        border: none;
        font-size: 1.5rem;
        color: white;
        opacity: 0.8;
    }

        #detailModal .btn-close:hover {
            opacity: 1;
        }
</style>

<div class="employee-container">
    <!-- Thống kê -->
    <div class="stats-container">
        <button class="stat-card stat-total" onclick="filterStatus('all')">
            <i class="fas fa-users"></i>
            Tổng khách hàng
            <strong>@totalFilteredItems</strong>
        </button>
        <button class="stat-card stat-active" onclick="filterStatus('active')">
            <i class="fas fa-user-check"></i>
            Đang hoạt động
            <strong>@Model.Count(k => k.Trang_Thai)</strong>
        </button>
        <button class="stat-card stat-inactive" onclick="filterStatus('inactive')">
            <i class="fas fa-user-slash"></i>
            Không hoạt động
            <strong>@Model.Count(k => !k.Trang_Thai)</strong>
        </button>
    </div>

    <!-- Tìm kiếm & thao tác -->
    <div class="search-filter">
        <form asp-action="Index" method="get" class="d-flex gap-1 flex-grow-1">
            <input type="hidden" name="statusFilter" value="@statusFilter" />
            <input type="hidden" name="page" value="1" />
            <input type="hidden" name="pageSize" value="@pageSize" />
            <input type="text" name="searchTerm" class="form-control" placeholder="Tìm theo họ tên, email, số điện thoại..." value="@searchTerm" />
            <button type="submit" class="btn btn-outline-primary btn-sm rounded-pill">
                <i class="fas fa-search"></i>
            </button>
        </form>
        <a href="@Url.Action("Create")" class="btn btn-success btn-sm">
            <i class="fas fa-plus"></i> Thêm khách hàng
        </a>
        <a href="@Url.Action("ExportToExcel", new { searchTerm, statusFilter })" class="btn btn-info btn-sm ms-2">
            <i class="fas fa-file-export"></i> Xuất Excel
        </a>
        <form asp-action="ImportFromExcel" method="post" enctype="multipart/form-data" class="d-inline">
            <input type="file" name="file" class="form-control d-none" id="importFile" accept=".xlsx,.xls" required />
            <button type="button" class="btn btn-warning btn-sm ms-2" onclick="document.getElementById('importFile').click()">
                <i class="fas fa-file-import"></i> Nhập Excel
            </button>
            <button type="submit" class="d-none" id="importSubmit"></button>
        </form>
    </div>

    <!-- Bảng danh sách -->
    <div class="table-responsive">
        <table class="table table-bordered table-hover text-center table-custom">
            <thead>
                <tr>
                    <th>Mã KH</th>
                    <th>Họ tên</th>
                    <th>SĐT</th>
                    <th>Email</th>
                    <th>Trạng thái</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var kh in Model)
                    {
                        <tr class="customer-row" data-id="@kh.ID_Khach_Hang">
                            <td>@kh.ID_Khach_Hang</td>
                            <td>@kh.Ho_Ten</td>
                            <td>@kh.So_Dien_Thoai</td>
                            <td>@kh.Email</td>
                            <td>
                                <span class="badge bg-@(kh.Trang_Thai ? "success" : "secondary")">
                                    @(kh.Trang_Thai ? "Đang hoạt động" : "Không hoạt động")
                                </span>
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", new { id = kh.ID_Khach_Hang })" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form asp-action="Delete" asp-route-id="@kh.ID_Khach_Hang" method="post" style="display:inline" onsubmit="return confirm('Bạn có chắc muốn xóa?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger btn-sm ms-2">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="6" class="text-center text-muted">Không có dữ liệu</td></tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Phân trang -->
    @if (totalPages > 1)
    {
        <nav aria-label="Customer pagination">
            <ul class="pagination justify-content-center mt-3">
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = Math.Max(1, currentPage - 1), pageSize, searchTerm, statusFilter })">Trước</a>
                </li>
                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = i, pageSize, searchTerm, statusFilter })">@i</a>
                    </li>
                }
                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = Math.Min(totalPages, currentPage + 1), pageSize, searchTerm, statusFilter })">Sau</a>
                </li>
            </ul>
        </nav>
    }
</div>

<!-- Modal Chi tiết -->
<div id="detailModal" class="modal fade" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-3 shadow-lg">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Chi tiết khách hàng</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="modalBody">
                <p class="text-center text-muted">Đang tải...</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Modal chi tiết
            document.querySelectorAll('.customer-row').forEach(row => {
                row.addEventListener('click', function (e) {
                    if (e.target.closest("a,button,form")) return; // tránh click nhầm
                    let id = this.getAttribute('data-id');
                    let modal = new bootstrap.Modal(document.getElementById('detailModal'));
                    document.getElementById('modalBody').innerHTML = "Đang tải...";
                    fetch(`/KhachHang/Details/${id}`)
                        .then(res => res.text())
                        .then(data => document.getElementById('modalBody').innerHTML = data)
                        .catch(error => console.error('Error fetching details:', error));
                    modal.show();
                });
            });

            // Import file
            document.getElementById('importFile').addEventListener('change', function () {
                if (this.files.length > 0) {
                    document.getElementById('importSubmit').click();
                }
            });
        });

        function filterStatus(type) {
            let url = '@Url.Action("Index", "KhachHang")';
            let search = '@searchTerm';
            if (type === 'all') window.location.href = `${url}?searchTerm=${search}&statusFilter=`;
            else if (type === 'active') window.location.href = `${url}?searchTerm=${search}&statusFilter=true`;
            else if (type === 'inactive') window.location.href = `${url}?searchTerm=${search}&statusFilter=false`;
        }

        function changePageSize(size) {
            const url = new URL(window.location.href);
            url.searchParams.set("pageSize", size);
            url.searchParams.set("page", 1); // reset về trang 1 khi đổi pageSize
            window.location.href = url.toString();
        }
    </script>
}