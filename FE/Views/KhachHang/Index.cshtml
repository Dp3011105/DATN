@model IEnumerable<BE.DTOs.KhachHangDTO>
@{
    ViewData["Title"] = "Danh sách khách hàng";
    Layout = "_AdminLayout";
}

<div class="container-fluid p-4">

    <!-- Thống kê -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-white bg-primary shadow stat-card">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-2x mb-2"></i>
                    <h5>Tổng khách hàng</h5>
                    <h3>@Model.Count()</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-success shadow stat-card">
                <div class="card-body text-center">
                    <i class="fas fa-user-check fa-2x mb-2"></i>
                    <h5>Đang hoạt động</h5>
                    <h3>@Model.Count(k => k.Trang_Thai)</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-secondary shadow stat-card">
                <div class="card-body text-center">
                    <i class="fas fa-user-slash fa-2x mb-2"></i>
                    <h5>Không hoạt động</h5>
                    <h3>@Model.Count(k => !k.Trang_Thai)</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Khung chính -->
    <div class="card shadow-lg rounded-3">
        <div class="card-header bg-gradient bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fas fa-address-book me-2"></i>Danh sách khách hàng</h4>
            <a href="@Url.Action("Create")" class="btn btn-success btn-sm rounded-pill">
                <i class="fas fa-plus"></i> Thêm khách hàng
            </a>
            <a href="@Url.Action("ExportToExcel")" class="btn btn-info btn-sm rounded-pill ms-1">
                <i class="fas fa-file-export"></i> Xuất Excel
            </a>
            <form asp-action="ImportFromExcel" method="post" enctype="multipart/form-data" class="d-inline">
                <input type="file" name="file" class="form-control form-control-sm d-inline w-auto" required />
                <button type="submit" class="btn btn-warning btn-sm rounded-pill ms-1">
                    <i class="fas fa-file-import"></i> Nhập Excel
                </button>
            </form>
        </div>

        <div class="card-body">
            <!-- Tabs -->
            <ul class="nav nav-pills mb-3 justify-content-center" id="customerTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="all-tab" data-bs-toggle="tab" data-bs-target="#all" type="button">Tất cả</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="active-tab" data-bs-toggle="tab" data-bs-target="#active" type="button">Đang hoạt động</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="inactive-tab" data-bs-toggle="tab" data-bs-target="#inactive" type="button">Không hoạt động</button>
                </li>
            </ul>

            <div class="tab-content">
                <!-- Tất cả -->
                <div class="tab-pane fade show active" id="all" role="tabpanel">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle shadow-sm rounded table-custom">
                            <thead class="bg-primary text-white">
                                <tr>
                                    <th>Mã KH</th>
                                    <th>Họ tên</th>
                                    <th>SĐT</th>
                                    <th>Email</th>
                                    <th>Trạng thái</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Any())
                                {
                                    @foreach (var kh in Model)
                                    {
                                        <tr class="customer-row" data-id="@kh.ID_Khach_Hang">
                                            <td>@kh.ID_Khach_Hang</td>
                                            <td>@kh.Ho_Ten</td>
                                            <td>@kh.So_Dien_Thoai</td>
                                            <td>@kh.Email</td>
                                            <td>
                                                <span class="badge bg-@(kh.Trang_Thai ? "success" : "secondary") px-3 py-2 rounded-pill">
                                                    @(kh.Trang_Thai ? "Đang hoạt động" : "Không hoạt động")
                                                </span>
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Edit", new { id = kh.ID_Khach_Hang })" class="btn btn-warning btn-sm rounded-pill me-1 btn-action">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <form asp-action="Delete" asp-route-id="@kh.ID_Khach_Hang" method="post" style="display:inline" onsubmit="return confirm('Bạn có chắc muốn xóa?');">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-danger btn-sm rounded-pill btn-action">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center text-muted">Không có dữ liệu</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Đang hoạt động -->
                <div class="tab-pane fade" id="active" role="tabpanel">
                    @if (Model.Any(k => k.Trang_Thai))
                    {
                        @foreach (var kh in Model.Where(k => k.Trang_Thai))
                        {
                            <div class="d-flex align-items-center border-bottom py-2 px-2 hover-card">
                                <div class="flex-grow-1">
                                    <strong>@kh.Ho_Ten</strong> (@kh.So_Dien_Thoai)
                                </div>
                                <div>
                                    <a href="@Url.Action("Edit", new { id = kh.ID_Khach_Hang })" class="btn btn-warning btn-sm rounded-pill me-1 btn-action">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@kh.ID_Khach_Hang" method="post" style="display:inline" onsubmit="return confirm('Bạn có chắc muốn xóa?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-danger btn-sm rounded-pill btn-action">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-center text-muted">Không có khách hàng đang hoạt động</p>
                    }
                </div>

                <!-- Không hoạt động -->
                <div class="tab-pane fade" id="inactive" role="tabpanel">
                    @if (Model.Any(k => !k.Trang_Thai))
                    {
                        @foreach (var kh in Model.Where(k => !k.Trang_Thai))
                        {
                            <div class="d-flex align-items-center border-bottom py-2 px-2 hover-card">
                                <div class="flex-grow-1">
                                    <strong>@kh.Ho_Ten</strong> (@kh.So_Dien_Thoai)
                                </div>
                                <div>
                                    <a href="@Url.Action("Edit", new { id = kh.ID_Khach_Hang })" class="btn btn-warning btn-sm rounded-pill me-1 btn-action">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@kh.ID_Khach_Hang" method="post" style="display:inline" onsubmit="return confirm('Bạn có chắc muốn xóa?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-danger btn-sm rounded-pill btn-action">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-center text-muted">Không có khách hàng không hoạt động</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Chi tiết -->
<div id="detailModal" class="modal fade" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-3 shadow-lg">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Chi tiết khách hàng</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="modalBody">
                <p class="text-center text-muted">Đang tải...</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Modal chi tiết
            document.querySelectorAll('.customer-row').forEach(row => {
                row.addEventListener('click', function (e) {
                    if (e.target.closest("a,button,form")) return; // tránh click nhầm
                    let id = this.getAttribute('data-id');
                    let modal = new bootstrap.Modal(document.getElementById('detailModal'));
                    document.getElementById('modalBody').innerHTML = "Đang tải...";
                    fetch(`/KhachHang/Details/${id}`)
                        .then(res => res.text())
                        .then(data => document.getElementById('modalBody').innerHTML = data);
                    modal.show();
                });
            });
        });
    </script>
}

<style>
    .stat-card {
        transition: all 0.3s ease;
        border-radius: 15px;
    }

        .stat-card:hover {
            transform: translateY(-5px) scale(1.05);
            box-shadow: 0 8px 20px rgba(0,0,0,0.25);
        }

    .table-custom tbody tr {
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .table-custom tbody tr:hover {
            background: #f0f9ff;
            transform: translateX(5px);
        }

    .btn-action {
        transition: all 0.2s ease;
    }

        .btn-action:hover {
            transform: scale(1.1);
        }

    .hover-card {
        transition: background 0.3s ease, transform 0.2s;
        border-radius: 8px;
    }

        .hover-card:hover {
            background: #f8fafc;
            transform: scale(1.01);
        }
</style>
