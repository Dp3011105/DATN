@using FE.Controllers
@model ChiTietHoaDonViewModel
@{
    ViewData["Title"] = "Chi tiết hóa đơn";
    var hd = Model.HoaDon;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container py-3">
    <a class="btn btn-light mb-3" href="/QuanLyDonHang">← Quay lại</a>
    <h3 class="mb-3">Hóa đơn @hd?.Ma_Hoa_Don</h3>

    <div class="row g-3">
        <div class="col-md-6">
            <div class="card p-3 h-100">
                <h5>Thông tin chung</h5>
                <div>Mã đơn: <strong>@(hd?.Ma_Hoa_Don ?? "N/A")</strong></div>
                <div>Khách hàng: <strong>@(hd?.KhachHang?.Ho_Ten ?? "Khách lẻ")</strong></div>
                <div>Ngày tạo: <strong>@(hd?.Ngay_Tao.ToString("dd/MM/yyyy HH:mm"))</strong></div>
                <div>Phương thức thanh toán: <strong>@(hd?.HinhThucThanhToan?.Phuong_Thuc_Thanh_Toan ?? "N/A")</strong></div>
                <div>
                    Trạng thái:
                    <span class="badge bg-secondary">
                        @MapTrangThaiFromDatabase(hd?.Trang_Thai ?? "")
                    </span>
                </div>
                @if (!string.IsNullOrWhiteSpace(hd?.Ghi_Chu))
                {
                    <div class="mt-2">Ghi chú: <em>@hd.Ghi_Chu</em></div>
                }
                @if (!string.IsNullOrWhiteSpace(hd?.LyDoHuyDon))
                {
                    <div class="mt-2 text-danger">Lý do hủy: <em>@hd.LyDoHuyDon</em></div>
                }
            </div>
        </div>

        <div class="col-md-6">
            <div class="card p-3 h-100">
                <h5>Tổng tiền</h5>
                <div class="display-6">@String.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:C0}", hd?.Tong_Tien ?? 0)</div>
               
            </div>
        </div>
    </div>

    <div class="card p-3 mt-3">
        <h5>Chi tiết sản phẩm</h5>
        <div class="table-responsive">
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>Sản phẩm</th>
                        <th>Số lượng</th>
                        <th>Đơn giá</th>
                        <th>Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ct in Model.ChiTiets)
                    {
                        <tr>
                            <td>@(ct.SanPham?.Ten_San_Pham ?? "Sản phẩm")</td>
                            <td>@ct.So_Luong</td>
                            <td>@String.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:C0}", ct.Gia_San_Pham)</td>
                            <td>@String.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:C0}", (ct.Gia_San_Pham * ct.So_Luong))</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@functions {
    private string MapTrangThaiFromDatabase(string db) => db switch
    {
        "Chua_Xac_Nhan" or "Dang_Xu_Ly" => "Chờ xác nhận",
        "Da_Xac_Nhan" => "Chờ giao",
        "Dang_Giao_Hang" => "Vận chuyển",
        "Hoan_Thanh" => "Hoàn thành",
        "Huy_Don" => "Đã huỷ",
        _ => db
    };
}
